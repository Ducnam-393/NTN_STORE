@model NTN_STORE.Models.Category

@{
    ViewData["Title"] = "Xóa Danh mục";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Xóa Danh mục</h1>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4 border-bottom-danger">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-danger">Cảnh báo xóa dữ liệu</h6>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold">Bạn có chắc chắn muốn xóa danh mục này?</h4>
                <p class="mb-4">Lưu ý: Việc xóa danh mục có thể ảnh hưởng đến các sản phẩm thuộc danh mục này.</p>

                <dl class="row">
                    <dt class="col-sm-4">Tên danh mục:</dt>
                    <dd class="col-sm-8 font-weight-bold text-primary">@Model.Name</dd>

                    <dt class="col-sm-4">Mô tả:</dt>
                    <dd class="col-sm-8">
                        @if (string.IsNullOrEmpty(Model.Description))
                        {
                            <span class="text-muted font-italic">(Không có mô tả)</span>
                        }
                        else
                        {
                            @Model.Description
                        }
                    </dd>
                </dl>

                <hr />

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-trash"></i>
                        </span>
                        <span class="text">Xác nhận Xóa</span>
                    </button>

                    <a asp-action="Index" class="btn btn-secondary btn-icon-split ml-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                        <span class="text">Hủy bỏ</span>
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>