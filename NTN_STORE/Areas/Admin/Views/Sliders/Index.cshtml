@model IEnumerable<NTN_STORE.Models.Slider>
@{
    ViewData["Title"] = "Quản lý Banner";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Banner</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm"><i class="fas fa-plus"></i> Thêm mới</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="bg-light text-dark">
                    <tr>
                        <th width="15%">Hình ảnh</th>
                        <th width="25%">Tiêu đề chính</th>
                        <th width="20%">Tiêu đề phụ</th>
                        <th width="10%" class="text-center">Thứ tự</th>
                        <th width="10%" class="text-center">Trạng thái</th>
                        <th width="20%" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="@item.ImageUrl" class="rounded shadow-sm" style="width: 120px; height: 60px; object-fit: cover;" />
                            </td>
                            <td class="font-weight-bold text-primary">@Html.Raw(item.Title)</td>
                            <td>@item.SubTitle</td>
                            <td class="text-center font-weight-bold">@item.DisplayOrder</td>
                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-success px-2 py-1">Hiển thị</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary px-2 py-1">Ẩn</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm btn-icon-split mb-1">
                                    <span class="icon text-white-50"><i class="fas fa-edit"></i></span>
                                    <span class="text">Sửa</span>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-icon-split mb-1" onclick="return confirm('Bạn có chắc chắn muốn xóa banner này?');">
                                    <span class="icon text-white-50"><i class="fas fa-trash"></i></span>
                                    <span class="text">Xóa</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>