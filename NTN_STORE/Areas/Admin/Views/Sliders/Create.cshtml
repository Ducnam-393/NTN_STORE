@model NTN_STORE.Models.Slider
@{
    ViewData["Title"] = "Thêm Banner mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thêm Banner</h1>
    <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm"><i class="fas fa-arrow-left"></i> Quay lại</a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin Banner</h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="font-weight-bold">Hình ảnh Banner (Kích thước 1920x600px)</label>
                        <div class="custom-file">
                            <input type="file" name="ImageFile" class="custom-file-input" id="customFile" onchange="previewImage(this)">
                            <label class="custom-file-label" for="customFile">Chọn file ảnh...</label>
                        </div>
                        <img id="imgPreview" src="#" alt="Preview" class="mt-3 rounded shadow-sm d-none" style="max-width: 100%; height: 200px; object-fit: cover;" />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SubTitle" class="font-weight-bold">Tiêu đề phụ (Nhỏ)</label>
                                <input asp-for="SubTitle" class="form-control" placeholder="VD: MÙA HÈ SÔI ĐỘNG" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Title" class="font-weight-bold">Tiêu đề chính (Lớn)</label>
                                <input asp-for="Title" class="form-control" placeholder="VD: SALE UP TO 50%" />
                                <small class="text-muted">Hỗ trợ thẻ &lt;br&gt; để xuống dòng</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="LinkUrl" class="font-weight-bold">Đường dẫn khi click (Link)</label>
                        <input asp-for="LinkUrl" class="form-control" placeholder="/Product?category=..." />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DisplayOrder" class="font-weight-bold">Thứ tự hiển thị</label>
                                <input asp-for="DisplayOrder" class="form-control" type="number" value="1" />
                            </div>
                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            <div class="custom-control custom-switch mt-4">
                                <input type="checkbox" class="custom-control-input" asp-for="IsActive" checked>
                                <label class="custom-control-label font-weight-bold" asp-for="IsActive">Hiển thị ngay</label>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <button type="submit" class="btn btn-primary px-5"><i class="fas fa-save"></i> Lưu lại</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Script preview ảnh khi chọn
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var img = document.getElementById('imgPreview');
                img.src = e.target.result;
                img.classList.remove('d-none');
            }
            reader.readAsDataURL(input.files[0]);

            // Hiển thị tên file
            var fileName = input.files[0].name;
            input.nextElementSibling.innerHTML = fileName;
        }
    }
</script>