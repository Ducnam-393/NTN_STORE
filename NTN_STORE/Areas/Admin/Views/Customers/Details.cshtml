@model NTN_STORE.Models.ViewModels.UserDetailViewModel
@using Microsoft.AspNetCore.Identity
@* 1. Inject UserManager trực tiếp vào View *@
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Hồ sơ khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    // 2. Sử dụng biến đã inject để kiểm tra trạng thái khóa
    bool isLocked = await UserManager.IsLockedOutAsync(Model.User);
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Hồ sơ: <span class="text-primary">@Model.User.UserName</span></h1>
    <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm"><i class="fas fa-arrow-left"></i> Quay lại</a>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin cá nhân</h6>
                @if (isLocked)
                {
                    <span class="badge badge-danger">Đang bị khóa</span>
                }
                else
                {
                    <span class="badge badge-success">Hoạt động</span>
                }
            </div>
            <div class="card-body text-center">
                <img class="img-profile rounded-circle mb-3" src="~/Admin/img/undraw_profile.svg" style="width: 100px;">
                <h5 class="font-weight-bold">@Model.User.Email</h5>
                <p class="text-muted">SĐT: @(Model.User.PhoneNumber ?? "Chưa cập nhật")</p>

                <hr>
                <div class="text-left">
                    <p><strong>ID:</strong> <small class="text-muted">@Model.User.Id</small></p>
                    <p>
                        <strong>Vai trò hiện tại:</strong>
                        @if (Model.Roles.Any())
                        {
                            @foreach (var r in Model.Roles)
                            {
                                <span class="badge badge-info mr-1">@r</span>
                            }
                        }
                        else
                        {
                            <span class="badge badge-secondary">Customer</span>
                        }
                    </p>
                </div>

                <form asp-action="ToggleStatus" method="post" class="mt-3">
                    <input type="hidden" name="id" value="@Model.User.Id" />
                    @if (isLocked)
                    {
                        <button type="submit" class="btn btn-success btn-block" onclick="return confirm('Mở khóa tài khoản này?')">
                            <i class="fas fa-unlock me-2"></i> Mở khóa tài khoản
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-warning btn-block text-white" onclick="return confirm('Bạn chắc chắn muốn KHÓA tài khoản này?')">
                            <i class="fas fa-lock me-2"></i> Khóa tài khoản
                        </button>
                    }
                </form>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-gradient-primary">
                <h6 class="m-0 font-weight-bold text-white">Quản lý Quyền hạn (Roles)</h6>
            </div>
            <div class="card-body">
                <p class="small mb-3 text-muted">Cấp quyền hoặc gỡ quyền cho user này:</p>
                <div class="list-group list-group-flush">
                    @foreach (var role in Model.AllRoles)
                    {
                        bool hasRole = Model.Roles.Contains(role);
                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                            <span class="font-weight-bold @(hasRole ? "text-primary" : "text-secondary")">@role</span>
                            <form asp-action="UpdateRole" method="post">
                                <input type="hidden" name="userId" value="@Model.User.Id" />
                                <input type="hidden" name="role" value="@role" />
                                @if (hasRole)
                                {
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Gỡ quyền @role?')">Gỡ</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-outline-primary btn-sm">Cấp quyền</button>
                                }
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Lịch sử mua hàng (@Model.Orders.Count() đơn)</h6>
            </div>
            <div class="card-body">
                @if (Model.Orders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Ngày đặt</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td><a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="font-weight-bold text-primary">#@order.OrderCode</a></td>
                                        <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                                        <td class="text-danger font-weight-bold">@order.TotalAmount.ToString("N0")₫</td>
                                        <td>
                                            @if (order.Status == "Completed")
                                            {
                                                <span class="badge badge-success">Hoàn thành</span>
                                            }
                                            else if (order.Status == "Cancelled")
                                            {

                                                <span class="badge badge-danger">Đã hủy</span>
                                            }
                                            else if (order.Status == "Shipping")
                                            {

                                                <span class="badge badge-info">Đang giao</span>
                                            }
                                            else
                                            {

                                                <span class="badge badge-warning text-dark">@order.Status</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info shadow-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="fas fa-shopping-basket fa-3x mb-3 text-gray-300"></i>
                        <p>Khách hàng này chưa có đơn hàng nào.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>