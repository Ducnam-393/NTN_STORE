@model IEnumerable<NTN_STORE.Models.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Quản lý Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Tài khoản</h6>
        <a asp-action="ExportExcel" class="btn btn-success btn-sm shadow-sm"><i class="fas fa-file-excel"></i> Xuất Excel</a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Tài khoản / Email</th>
                        <th>SĐT</th>
                        <th>Vai trò (Role)</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="font-weight-bold text-primary">@item.UserName</div>
                                <small class="text-muted">@item.Email</small>
                            </td>
                            <td>@item.PhoneNumber</td>
                            <td>
                                @foreach (var role in item.Roles)
                                {
                                    <span class="badge badge-info mr-1">@role</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.IsLocked)
                                {
                                    <span class="badge badge-danger p-2">Đang bị khóa</span>
                                }
                                else
                                {
                                    <span class="badge badge-success p-2">Hoạt động</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary shadow-sm">
                                    <i class="fas fa-user-cog"></i> Chi tiết
                                </a>

                                <form asp-action="ToggleStatus" method="post" class="d-inline ml-1">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    @if (item.IsLocked)
                                    {
                                        <button type="submit" class="btn btn-sm btn-success shadow-sm" title="Mở khóa" onclick="return confirm('Mở khóa tài khoản này?')">
                                            <i class="fas fa-unlock"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-sm btn-warning shadow-sm" title="Khóa tài khoản" onclick="return confirm('Bạn chắc chắn muốn KHÓA tài khoản này?')">
                                            <i class="fas fa-lock"></i>
                                        </button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>