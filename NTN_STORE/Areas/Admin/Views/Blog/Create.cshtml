@model NTN_STORE.Models.BlogPost
@{
    ViewData["Title"] = "Viết bài mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Soạn thảo bài viết</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="font-weight-bold">Tiêu đề bài viết</label>
                        <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Tóm tắt ngắn (Sapo)</label>
                        <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Nội dung chi tiết</label>
                        <textarea asp-for="Content" id="blogEditor" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Ảnh đại diện (Thumbnail)</label>
                        <input type="file" name="ThumbnailFile" class="form-control-file" />
                    </div>
                    <div class="form-group">
                        <label>Tác giả</label>
                        <input asp-for="Author" class="form-control" value="NTN Store" />
                    </div>
                    <div class="custom-control custom-checkbox mb-3">
                        <input asp-for="IsVisible" class="custom-control-input" checked />
                        <label class="custom-control-label" asp-for="IsVisible">Công khai ngay</label>
                    </div>
                    <button type="submit" class="btn btn-success btn-block fw-bold">Đăng bài</button>
                    <a asp-action="Index" class="btn btn-light btn-block">Hủy</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('blogEditor');
    </script>
}
