@model NTN_STORE.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.OrderCode;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    // Tính toán lại các con số để hiển thị (vì DB chỉ lưu TotalAmount)
    // Logic này phải khớp với lúc Checkout
    decimal subTotal = Model.OrderDetails.Sum(x => x.Price * x.Quantity);
    decimal discount = Model.DiscountValue; // Cần đảm bảo Model Order có trường này (đã làm ở bước Coupon)
    // Phí ship = Tổng - (Tạm tính - Giảm giá)
    // Tuy nhiên để đơn giản hiển thị, ta có thể tính ngược hoặc lưu phí ship vào DB ở bước checkout sẽ chuẩn hơn.
    // Tạm tính:
    decimal shippingFee = Model.TotalAmount - (subTotal - discount);
    if (shippingFee < 0) shippingFee = 0; // Fix lỗi làm tròn số nhỏ
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Chi tiết đơn hàng: <span class="text-primary">#@Model.OrderCode</span></h1>
    <div>
        <a asp-action="Invoice" asp-route-id="@Model.Id" target="_blank" class="btn btn-sm btn-secondary shadow-sm mr-2">
            <i class="fas fa-print fa-sm text-white-50"></i> In hóa đơn
        </a>
        <a asp-action="Index" class="btn btn-sm btn-light shadow-sm">
            <i class="fas fa-arrow-left fa-sm"></i> Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Sản phẩm đã đặt</h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">Đơn giá</th>
                                <th class="text-center">SL</th>
                                <th class="text-right">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {

                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@(item.Product.Images?.FirstOrDefault()?.ImageUrl ?? "/img/no-image.jpg")" width="50" class="img-thumbnail mr-3">
                                            <div>
                                                <div class="font-weight-bold text-dark">@item.Product.Name</div>
                                                <div class="small text-muted">Phân loại: @item.Variant?.Color, @item.Variant?.Size</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center align-middle">@item.Price.ToString("N0")₫</td>
                                    <td class="text-center align-middle">x @item.Quantity</td>
                                    <td class="text-right align-middle font-weight-bold">@((item.Price * item.Quantity).ToString("N0"))₫</td>
                                </tr>                           
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row justify-content-end">
            <div class="col-lg-6">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Thanh toán</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <span class="font-weight-bold">@subTotal.ToString("N0")₫</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Phí vận chuyển:</span>
                            <span>@shippingFee.ToString("N0")₫</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 text-success">
                            <span>Giảm giá (Voucher):</span>
                            <span>-@discount.ToString("N0")₫</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 font-weight-bold text-dark">Tổng cộng:</span>
                            <span class="h4 font-weight-bold text-danger">@Model.TotalAmount.ToString("N0")₫</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-primary text-white">
                <h6 class="m-0 font-weight-bold">Trạng thái đơn hàng</h6>
            </div>
            <div class="card-body">
                <div class="mb-3 text-center">
                    <span class="h5 badge badge-pill px-3 py-2
                  @(Model.Status == "Completed" ? "badge-success" :
                                              Model.Status == "Cancelled" ? "badge-danger" :
                                              Model.Status == "Shipping" ? "badge-info" : "badge-warning")">
                        @switch (Model.Status)
                        {
                            case "Pending":
                                <text>Chờ xử lý</text>
                                ; break;
                            case "Shipping":

                                <text>Đang giao hàng</text>
                                ; break;
                            case "Completed":

                                <text>Hoàn thành</text>
                                ; break;
                            case "Cancelled":

                                <text>Đã hủy</text>
                                ; break;
                            default:

                                @Model.Status
                                ; break;
                        }
                    </span>
                </div>

                <hr>

                @if (Model.Status == "Cancelled" || Model.Status == "Completed")
                {
                    <div class="alert alert-secondary text-center mb-0">
                        <i class="fas fa-lock mr-2"></i> Đơn hàng đã kết thúc. Không thể thay đổi trạng thái.
                    </div>
                }
                else
                {
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="form-group">
                            <label class="small font-weight-bold">Chuyển trạng thái sang:</label>
                            <select name="status" class="form-control">
                                @if (Model.Status == "Pending")
                                {
                                    <option value="Shipping">Đang giao (Shipping)</option>
                                    <option value="Cancelled">Hủy đơn (Cancel)</option>
                                }
                                else if (Model.Status == "Shipping")
                                {
                                    <option value="Completed">Đã giao xong (Complete)</option>
                                    <option value="Cancelled">Giao thất bại / Hủy</option>
                                }
                                else if (Model.Status == "Unpaid") /* THÊM ĐOẠN NÀY */
                                {
                                    <option value="Pending">Đã nhận tiền (Chuyển sang Chờ xử lý)</option>
                                    <option value="Cancelled">Hủy đơn (Khách không thanh toán)</option>
                                }
                                else if (Model.Status == "Paid") /* THÊM NẾU CÓ THANH TOÁN ONLINE THÀNH CÔNG */
                                {
                                    <option value="Shipping">Đang giao hàng</option>
                                    <option value="Cancelled">Hoàn tiền & Hủy</option>
                                }
                                else
                                {
                                    <option value="Pending">Chờ xử lý</option>
                                    <option value="Shipping">Đang giao</option>
                                    <option value="Completed">Hoàn thành</option>
                                    <option value="Cancelled">Hủy</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block font-weight-bold">
                            <i class="fas fa-check mr-1"></i> Cập nhật ngay
                        </button>
                    </form>

                    <div class="mt-3 text-center">
                        <small class="text-muted font-italic">* Chuyển sang "Hủy" sẽ tự động cộng lại tồn kho.</small>
                    </div>
                }
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin giao hàng</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="small text-muted font-weight-bold mb-0">Người nhận</label>
                    <div class="font-weight-bold text-dark">@Model.CustomerName</div>
                </div>
                <div class="mb-3">
                    <label class="small text-muted font-weight-bold mb-0">Số điện thoại</label>
                    <div><a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a></div>
                </div>
                <div class="mb-3">
                    <label class="small text-muted font-weight-bold mb-0">Địa chỉ</label>
                    <div>@Model.Address</div>
                </div>
                <div class="mb-0">
                    <label class="small text-muted font-weight-bold mb-0">Ghi chú</label>
                    <div class="font-italic bg-light p-2 rounded">@(string.IsNullOrEmpty(Model.Notes) ? "Không có ghi chú" : Model.Notes)</div>
                </div>
            </div>
        </div>
    </div>
</div>