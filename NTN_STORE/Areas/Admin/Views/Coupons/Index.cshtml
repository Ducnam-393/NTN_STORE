@model IEnumerable<NTN_STORE.Models.Coupon>

@{
    ViewData["Title"] = "Quản lý Mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Mã giảm giá</h6>
        <a asp-action="Create" class="btn btn-success btn-sm shadow-sm"><i class="fas fa-plus"></i> Tạo mã mới</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Mã Code</th>
                        <th>Mức giảm</th>
                        <th>Lượt dùng</th>
                        <th>Hạn sử dụng</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        bool isExpired = item.ExpiryDate < DateTime.Now;
                        <tr>
                            <td>
                                <span class="font-weight-bold text-primary text-uppercase">@item.Code</span>
                                <div class="small text-muted">@item.Description</div>
                            </td>
                            <td class="font-weight-bold text-danger">
                                @if (item.DiscountPercent > 0)
                                {
                                    <span>-@item.DiscountPercent%</span>
                                }
                                else
                                {

                                    <span>-@item.DiscountAmount.ToString("N0")₫</span>
                                }
                            </td>
                            <td>
                                @item.UsedCount / @(item.UsageLimit == 0 ? "∞" : item.UsageLimit.ToString())
                                <div class="progress progress-sm mt-1">
                                    @{
                                        int percent = item.UsageLimit > 0 ? (item.UsedCount * 100 / item.UsageLimit) : 0;
                                        string color = percent >= 100 ? "bg-danger" : "bg-info";
                                    }
                                    <div class="progress-bar @color" role="progressbar" style="width: @percent%"></div>
                                </div>
                            </td>
                            <td>
                                <div class="@(isExpired ? "text-danger" : "")">@item.ExpiryDate.ToString("dd/MM/yyyy")</div>
                                @if (isExpired)
                                {
                                    <span class="badge badge-danger badge-counter">Hết hạn</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="badge @(item.IsActive ? "badge-success" : "badge-secondary")" style="cursor:pointer">
                                    @(item.IsActive ? "Đang chạy" : "Đã tắt")
                                </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-circle" onclick="return confirm('Bạn chắc chắn muốn xóa mã này?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
