@model NTN_STORE.Models.Coupon

@{
    ViewData["Title"] = "Tạo mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin Voucher</h6>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="form-group">
                        <label class="font-weight-bold">Mã Code (Viết liền, không dấu) <span class="text-danger">*</span></label>
                        <input asp-for="Code" class="form-control text-uppercase" placeholder="VD: SALE50, TET2025..." required />
                        <span asp-validation-for="Code" class="text-danger small"></span>
                    </div>

                    <div class="form-group">
                        <label>Mô tả ngắn</label>
                        <input asp-for="Description" class="form-control" placeholder="VD: Giảm 50k cho đơn từ 500k" />
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label class="font-weight-bold text-danger">Giảm theo % (0-100)</label>
                            <input asp-for="DiscountPercent" class="form-control" type="number" min="0" max="100" value="0" />
                            <small class="text-muted">Để 0 nếu muốn giảm theo số tiền.</small>
                        </div>
                        <div class="col-md-6 form-group">
                            <label class="font-weight-bold text-success">Hoặc Giảm số tiền cố định (VNĐ)</label>
                            <input asp-for="DiscountAmount" class="form-control" type="number" step="1000" value="0" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Giới hạn số lượt dùng</label>
                            <input asp-for="UsageLimit" class="form-control" type="number" value="100" />
                            <small>Nhập 0 nếu không giới hạn.</small>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Hạn sử dụng</label>
                            <input asp-for="ExpiryDate" class="form-control" type="datetime-local"
                                   value="@DateTime.Now.AddDays(30).ToString("yyyy-MM-ddTHH:mm")"
                                   asp-format="{0:yyyy-MM-ddTHH:mm}" />
                            <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-group custom-control custom-checkbox">
                        <input asp-for="IsActive" class="custom-control-input" checked />
                        <label class="custom-control-label" asp-for="IsActive">Kích hoạt ngay</label>
                    </div>

                    <hr />
                    <button type="submit" class="btn btn-primary btn-block font-weight-bold">Tạo Voucher</button>
                    <a asp-action="Index" class="btn btn-light btn-block">Hủy bỏ</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}