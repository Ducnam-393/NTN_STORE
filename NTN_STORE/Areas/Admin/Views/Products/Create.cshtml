@model NTN_STORE.Models.ViewModels.ProductFormViewModel

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin sản phẩm</h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @* --- Thông tin chung --- *@
                    <div class="form-group">
                        <label asp-for="Product.Name"></label>
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.Description"></label>
                        <textarea asp-for="Product.Description" class="form-control"></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Product.Price"></label>
                            <input asp-for="Product.Price" class="form-control" type="number" />
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="Product.OriginalPrice"></label>
                            <input asp-for="Product.OriginalPrice" class="form-control" type="number" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Product.CategoryId"></label>
                            <select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="form-control">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="Product.BrandId"></label>
                            <select asp-for="Product.BrandId" asp-items="@Model.Brands" class="form-control">
                                <option value="">-- Chọn thương hiệu --</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Ảnh sản phẩm</label>
                        <div class="custom-file">
                            <input asp-for="ImageFile" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Chọn file...</label>
                        </div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <hr />

                    @* --- Phần Variants (Quan trọng) --- *@
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="m-0 font-weight-bold text-primary">Quản lý Size & Màu sắc</h6>
                        <button type="button" class="btn btn-sm btn-success" onclick="addVariantRow()">
                            <i class="fas fa-plus"></i> Thêm dòng
                        </button>
                    </div>

                    <table class="table table-bordered" id="variantsTable">
                        <thead>
                            <tr>
                                <th>Size</th>
                                <th>Màu sắc</th>
                                <th>Số lượng</th>
                                <th>Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Variants.Count; i++)
                            {
                                <tr>
                                    @* QUAN TRỌNG: Thêm Variants.Index để MVC nhận diện đúng dòng khi post về *@
                                    <input type="hidden" name="Variants.Index" value="@i" />

                                    <td>
                                        <input name="Variants[@i].Size" value="@Model.Variants[i].Size" class="form-control" required placeholder="VD: 40" />
                                    </td>
                                    <td>
                                        <input name="Variants[@i].Color" value="@Model.Variants[i].Color" class="form-control" required placeholder="VD: Đen" />
                                    </td>
                                    <td>
                                        <input name="Variants[@i].Stock" value="@Model.Variants[i].Stock" type="number" class="form-control" />
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">X</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr />

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Lưu sản phẩm</button>
                        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Script cho Create giống hệt Edit
        function addVariantRow() {
            var tableBody = document.getElementById("variantsTable").getElementsByTagName('tbody')[0];
            var newRow = tableBody.insertRow();

            // Tạo index ngẫu nhiên dựa trên thời gian để không bị trùng
            var index = new Date().getTime();

            var cell1 = newRow.insertCell(0);
            var cell2 = newRow.insertCell(1);
            var cell3 = newRow.insertCell(2);
            var cell4 = newRow.insertCell(3);

            // HTML cho Index (Bắt buộc có)
            var htmlIndex = '<input type="hidden" name="Variants.Index" value="' + index + '" />';

            cell1.innerHTML = htmlIndex + '<input name="Variants[' + index + '].Size" class="form-control" required placeholder="VD: 41" />';
            cell2.innerHTML = '<input name="Variants[' + index + '].Color" class="form-control" required placeholder="VD: Trắng" />';
            cell3.innerHTML = '<input name="Variants[' + index + '].Stock" type="number" value="100" class="form-control" />';
            cell4.innerHTML = '<button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">X</button>';
        }

        function removeRow(button) {
            var row = button.closest('tr');
            row.remove();
        }

        // Custom input file label update (nếu cần)
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}