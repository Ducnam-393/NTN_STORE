@model IEnumerable<NTN_STORE.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách Sản phẩm</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Thêm mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 5%">#</th>
                        <th style="width: 10%">Hình ảnh</th>
                        <th style="width: 30%">Tên sản phẩm</th>
                        <th style="width: 15%">Danh mục</th>
                        <th style="width: 15%">Giá bán</th>
                        <th style="width: 10%">Trạng thái</th>
                        <th style="width: 15%">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    @if (item.Images != null && item.Images.Any())
                                    {
                                        <img src="@item.Images.First().ImageUrl" class="img-thumbnail-admin" alt="@item.Name">
                                    }
                                    else
                                    {
                                        <img src="/img/no-image.jpg" class="img-thumbnail-admin" alt="No Image">
                                    }
                                </td>
                                <td>
                                    <div class="font-weight-bold text-primary mb-1">@item.Name</div>
                                    <div class="small text-muted">Hãng: @(item.Brand?.Name ?? "N/A")</div>
                                </td>
                                <td>@(item.Category?.Name ?? "Chưa phân loại")</td>
                                <td class="font-weight-bold">@item.Price.ToString("N0")₫</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success-soft">Hiển thị</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger-soft">Ẩn</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm btn-icon-split mb-1" title="Sửa">
                                        <span class="icon text-white-50"><i class="fas fa-edit"></i></span>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-icon-split mb-1" title="Chi tiết">
                                        <span class="icon text-white-50"><i class="fas fa-info-circle"></i></span>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-icon-split mb-1" title="Xóa">
                                        <span class="icon text-white-50"><i class="fas fa-trash"></i></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">Chưa có sản phẩm nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json"
                }
            });
        });
    </script>
}