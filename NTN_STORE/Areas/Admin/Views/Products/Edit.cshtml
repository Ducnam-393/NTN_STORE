@model NTN_STORE.Models.ViewModels.ProductFormViewModel

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa thông tin: @Model.Product.Name</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@Model.Product.Id" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="Product.Id" />
                    @if (Model.Product.Images != null && Model.Product.Images.Any())
                    {
                        <div class="form-group">
                            <label>Ảnh hiện tại:</label>
                            <div class="row">
                                @foreach (var img in Model.Product.Images)
                                {
                                    <div class="col-md-3 mb-3">
                                        <img src="@img.ImageUrl" class="img-thumbnail" style="max-height: 150px;" />
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Product.Name" class="control-label">Tên sản phẩm</label>
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.Description" class="control-label">Mô tả</label>
                        <textarea asp-for="Product.Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Product.Price" class="control-label">Giá bán</label>
                            <input asp-for="Product.Price" class="form-control" type="number" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Product.OriginalPrice" class="control-label">Giá gốc</label>
                            <input asp-for="Product.OriginalPrice" class="form-control" type="number" />
                            <span asp-validation-for="Product.OriginalPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Product.CategoryId" class="control-label">Danh mục</label>
                            <select asp-for="Product.CategoryId" class="form-control" asp-items="@Model.Categories">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Product.BrandId" class="control-label">Thương hiệu</label>
                            <select asp-for="Product.BrandId" class="form-control" asp-items="@Model.Brands">
                                <option value="">-- Chọn thương hiệu --</option>
                            </select>
                            <span asp-validation-for="Product.BrandId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Trạng thái</label>
                        <div class="custom-control custom-switch">
                            <input asp-for="Product.IsActive" type="checkbox" class="custom-control-input" id="isActiveSwitch">
                            <label class="custom-control-label" for="isActiveSwitch">Đang hoạt động (bày bán)</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Thêm/Thay đổi ảnh</label>
                        <div class="custom-file">
                            <input asp-for="ImageFile" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Chọn ảnh mới...</label>
                        </div>
                    </div>

                    <hr />

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}