@model IEnumerable<NTN_STORE.Models.ProductVariant>
@{
    ViewData["Title"] = "Quản lý Kho hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Tồn kho</h1>
    <div>
        <a href="/Admin/Inventory/CreateImport" class="btn btn-success shadow-sm"><i class="fas fa-plus-circle"></i> Nhập hàng mới</a>
        <a href="/Admin/Inventory/History" class="btn btn-info shadow-sm"><i class="fas fa-history"></i> Lịch sử</a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng Giá Trị Kho</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalStockValue.ToString("N0")₫</div>
                    </div>
                    <div class="col-auto"><i class="fas fa-coins fa-2x text-gray-300"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Sản phẩm sắp hết (<= 5)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.LowStockCount</div>
                    </div>
                    <div class="col-auto"><i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-white">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm trong kho</h6>

        <form method="get" class="form-inline">
            <select name="brandId" class="form-control form-control-sm mr-2" onchange="this.form.submit()" asp-items="ViewBag.Brands">
                <option value="">-- Tất cả Thương hiệu --</option>
            </select>
            <select name="filter" class="form-control form-control-sm mr-2" onchange="this.form.submit()">
                <option value="all">Tất cả trạng thái</option>
                <option value="low">Sắp hết hàng</option>
                <option value="out">Hết hàng (Stock=0)</option>
            </select>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Thương hiệu</th>
                        <th>Sản phẩm</th>
                        <th>Phân loại</th>
                        <th class="text-right">Giá vốn</th>
                        <th class="text-center">Tồn kho</th>
                        <th class="text-center">Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge badge-light border">@item.Product.Brand?.Name</span></td>
                            <td class="font-weight-bold text-dark">@item.Product.Name</td>
                            <td>@item.Color - @item.Size</td>
                            <td class="text-right">@item.Product.ImportPrice.ToString("N0")₫</td>
                            <td class="text-center font-weight-bold @(item.Stock <= 5 ? "text-danger" : "text-success")" style="font-size: 1.1em;">
                                @item.Stock
                            </td>
                            <td class="text-center">
                                @if (item.Stock == 0)
                                {
                                    <span class="badge badge-danger">Hết hàng</span>
                                }
                                else if (item.Stock <= 5)
                                {

                                    <span class="badge badge-warning">Sắp hết</span>
                                }
                                else
                                {

                                    <span class="badge badge-success">Sẵn sàng</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>