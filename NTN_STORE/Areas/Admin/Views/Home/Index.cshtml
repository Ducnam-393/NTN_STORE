@model NTN_STORE.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Tổng quan hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* 1. Card Thống kê hiện đại */
    .card-modern {
        border: none;
        border-radius: 15px;
        color: white;
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

        .card-modern:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
        }

    /* Nền Gradient cho từng loại thẻ */
    .bg-gradient-revenue {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* Tím xanh */
    }

    .bg-gradient-expense {
        background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%); /* Hồng phấn */
        color: #5a5a5a !important; /* Chữ màu tối cho nền sáng */
    }

    .bg-gradient-tax {
        background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%); /* Xanh ngọc */
        color: #333 !important;
    }

    .bg-gradient-profit {
        background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); /* Tím hồng */
        color: #333 !important;
    }

    /* Icon trang trí mờ phía sau */
    .card-icon-bg {
        position: absolute;
        right: -10px;
        bottom: -10px;
        font-size: 5rem;
        opacity: 0.2;
        transform: rotate(-15deg);
        transition: all 0.3s;
    }

    .card-modern:hover .card-icon-bg {
        transform: rotate(0deg) scale(1.1);
        opacity: 0.3;
    }

    /* 2. Chart & Table Container */
    .content-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.03);
    }

        .content-card .card-header {
            background: white;
            border-bottom: 1px solid #f0f0f0;
            border-radius: 15px 15px 0 0;
            padding: 1.2rem;
        }

    /* 3. Custom Scrollbar đẹp hơn */
    .table-responsive::-webkit-scrollbar {
        width: 6px;
        height: 6px;
    }

    .table-responsive::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }

    /* 4. Badge hãng */
    .brand-badge {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: white;
        font-size: 14px;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
    }
</style>

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Dashboard</h1>
            <small class="text-muted">Tổng quan tình hình kinh doanh của NTN Store</small>
        </div>
        <a href="/Admin/Reports" class="btn btn-sm btn-primary shadow-sm rounded-pill px-3">
            <i class="fas fa-download fa-sm text-white-50 mr-2"></i>Xuất báo cáo
        </a>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-modern bg-gradient-revenue h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-uppercase mb-1" style="opacity: 0.8;">Tổng Doanh Thu</div>
                            <div class="h4 mb-0 font-weight-bold">@Model.TotalRevenue.ToString("N0")₫</div>
                            <div class="mt-2 small" style="opacity: 0.8;"><i class="fas fa-arrow-up"></i> Tăng trưởng tốt</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign card-icon-bg text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-modern bg-gradient-expense h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-uppercase mb-1" style="opacity: 0.8;">Vốn (COGS)</div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.TotalExpense.ToString("N0")₫</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-invoice-dollar card-icon-bg text-dark"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-modern bg-gradient-tax h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-uppercase mb-1" style="opacity: 0.8;">Thuế Ước Tính</div>
                            <div class="h4 mb-0 font-weight-bold text-gray-800">@Model.EstimatedTax.ToString("N0")₫</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-university card-icon-bg text-dark"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card card-modern bg-gradient-profit h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-uppercase mb-1 text-dark" style="opacity: 0.7;">Lợi nhuận ròng</div>
                            <div class="h4 mb-0 font-weight-bold text-gray-900">@Model.NetProfit.ToString("N0")₫</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-wallet card-icon-bg text-dark"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card content-card h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Voucher Kích Hoạt</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ActiveCoupons Mã</div>
                    </div>
                    <div class="icon-circle bg-light text-primary p-3 rounded-circle">
                        <i class="fas fa-ticket-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card content-card h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Bài Viết & Tin Tức</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.BlogCount Bài</div>
                    </div>
                    <div class="icon-circle bg-light text-success p-3 rounded-circle">
                        <i class="fas fa-newspaper fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card content-card h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Banner Quảng Cáo</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.SliderCount Ảnh</div>
                    </div>
                    <div class="icon-circle bg-light text-warning p-3 rounded-circle">
                        <i class="fas fa-images fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-xl-8 col-lg-7">
            <div class="card content-card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-area mr-2"></i>Biểu đồ doanh thu & Chi phí
                    </h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                            <i class="fas fa-ellipsis-h text-gray-400"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-area" style="height: 350px;">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-5">
            <div class="card content-card mb-4">
                <div class="card-header py-3 bg-gradient-primary text-white d-flex justify-content-between align-items-center" style="background: #4e73df;">
                    <h6 class="m-0 font-weight-bold text-white"><i class="fas fa-warehouse mr-2"></i>Tồn kho theo Hãng</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive table-scroll" style="max-height: 350px;">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light text-gray-600 text-xs uppercase">
                                <tr>
                                    <th class="pl-4 border-0">Hãng</th>
                                    <th class="text-center border-0">Số lượng</th>
                                    <th class="text-right pr-4 border-0">Giá trị nhập</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var brand in Model.BrandStats.OrderByDescending(b => b.ImportCost))
                                {
                                    // Tạo màu ngẫu nhiên cho badge hãng
                                    string[] colors = { "#4e73df", "#1cc88a", "#36b9cc", "#f6c23e", "#e74a3b" };
                                    string bgStyle = colors[new Random().Next(0, colors.Length)];
                                    string initial = string.IsNullOrEmpty(brand.BrandName) ? "?" : brand.BrandName.Substring(0, 1).ToUpper();

                                    <tr>
                                        <td class="pl-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="brand-badge mr-3" style="background-color: @bgStyle">@initial</div>
                                                <span class="font-weight-bold text-gray-700">@brand.BrandName</span>
                                            </div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge badge-light border px-2 py-1">@brand.StockQuantity</span>
                                        </td>
                                        <td class="text-right pr-4 align-middle font-weight-bold text-success">
                                            @brand.ImportCost.ToString("N0")₫
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer bg-light text-center py-3 border-top-0">
                        <small class="text-muted font-weight-bold">Tổng giá trị kho: </small>
                        <span class="h6 font-weight-bold text-primary ml-1">@Model.BrandStats.Sum(b => b.ImportCost).ToString("N0")₫</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/Admin/vendor/chart.js/Chart.min.js"></script>
    <script>
        Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
        Chart.defaults.global.defaultFontColor = '#858796';

        // Xử lý gradient cho biểu đồ
        var ctx = document.getElementById("myAreaChart").getContext("2d");

        // Gradient Doanh thu (Màu xanh tím)
        var gradientRevenue = ctx.createLinearGradient(0, 0, 0, 400);
        gradientRevenue.addColorStop(0, 'rgba(78, 115, 223, 0.4)'); // Màu đậm ở trên
        gradientRevenue.addColorStop(1, 'rgba(78, 115, 223, 0.01)'); // Mờ dần xuống dưới

        // Gradient Chi phí (Màu đỏ cam - nếu muốn thêm line thứ 2)
        // Hiện tại view model chỉ vẽ 1 line doanh thu, tôi sẽ giữ nguyên logic nhưng làm đẹp hơn

        var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ChartLabels)),
                datasets: [{
                    label: "Doanh thu",
                    lineTension: 0.4, // Làm mượt đường cong hơn
                    backgroundColor: gradientRevenue, // Sử dụng gradient nền
                    borderColor: "#4e73df",
                    pointRadius: 5,
                    pointBackgroundColor: "#4e73df",
                    pointBorderColor: "rgba(255, 255, 255, 0.8)",
                    pointHoverRadius: 7,
                    pointHoverBackgroundColor: "#4e73df",
                    pointHoverBorderColor: "#fff",
                    pointHitRadius: 10,
                    pointBorderWidth: 2,
                    // Dữ liệu từ ViewModel
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ChartRevenueData)),
                }],
            },
            options: {
                maintainAspectRatio: false,
                layout: {
                    padding: { left: 10, right: 25, top: 25, bottom: 0 }
                },
                scales: {
                    xAxes: [{
                        time: { unit: 'date' },
                        gridLines: { display: false, drawBorder: false },
                        ticks: { maxTicksLimit: 7 }
                    }],
                    yAxes: [{
                        ticks: {
                            maxTicksLimit: 5,
                            padding: 10,
                            callback: function(value) { return value.toLocaleString('vi-VN') + '₫'; }
                        },
                        gridLines: {
                            color: "rgb(234, 236, 244)",
                            zeroLineColor: "rgb(234, 236, 244)",
                            drawBorder: false,
                            borderDash: [2],
                            zeroLineBorderDash: [2]
                        }
                    }],
                },
                legend: { display: false },
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    titleMarginBottom: 10,
                    titleFontColor: '#6e707e',
                    titleFontSize: 14,
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    intersect: false,
                    mode: 'index',
                    caretPadding: 10,
                    callbacks: {
                        label: function(tooltipItem, chart) {
                            var datasetLabel = chart.datasets[tooltipItem.datasetIndex].label || '';
                            return datasetLabel + ': ' + tooltipItem.yLabel.toLocaleString('vi-VN') + '₫';
                        }
                    }
                }
            }
        });
    </script>
}