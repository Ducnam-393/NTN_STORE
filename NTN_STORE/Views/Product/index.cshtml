@model List<NTN_STORE.Models.Product>

@{
    ViewData["Title"] = "Cửa hàng";
    Layout = "_Layout";

    // Lấy các giá trị từ ViewBag để giữ trạng thái filter
    var currentCategory = ViewBag.CurrentCategory as int?;
    var currentBrand = ViewBag.CurrentBrand as int?;
    var minPrice = ViewBag.MinPrice as decimal?;
    var maxPrice = ViewBag.MaxPrice as decimal?;
    var searchTerm = ViewBag.Search as string;
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/">Trang chủ</a>
                <a class="breadcrumb-item text-dark" href="/Product">Cửa hàng</a>
                <span class="breadcrumb-item active">Danh sách sản phẩm</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row px-xl-5">

        <div class="col-lg-3 col-md-4">
            <form method="get" action="/Product/Index">

                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Tìm kiếm</span></h5>
                <div class="bg-light p-4 mb-30">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control" placeholder="Tìm tên giày..." value="@searchTerm">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary">
                                <i class="fa fa-search"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Danh mục</span></h5>
                <div class="bg-light p-4 mb-30">
                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" id="cat-all" name="categoryId" value="" @(currentCategory == null ? "checked" : "")>
                        <label class="custom-control-label" for="cat-all">Tất cả</label>
                    </div>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var cat in ViewBag.Categories)
                        {
                            <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                                <input type="radio" class="custom-control-input" id="cat-@cat.Id" name="categoryId" value="@cat.Id" @(currentCategory == cat.Id ? "checked" : "")>
                                <label class="custom-control-label" for="cat-@cat.Id">@cat.Name</label>
                            </div>
                        }
                    }
                </div>

                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Thương hiệu</span></h5>
                <div class="bg-light p-4 mb-30">
                    <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" id="brand-all" name="brandId" value="" @(currentBrand == null ? "checked" : "")>
                        <label class="custom-control-label" for="brand-all">Tất cả</label>
                    </div>
                    @if (ViewBag.Brands != null)
                    {
                        foreach (var brand in ViewBag.Brands)
                        {
                            <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                                <input type="radio" class="custom-control-input" id="brand-@brand.Id" name="brandId" value="@brand.Id" @(currentBrand == brand.Id ? "checked" : "")>
                                <label class="custom-control-label" for="brand-@brand.Id">@brand.Name</label>
                            </div>
                        }
                    }
                </div>

                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Lọc theo giá</span></h5>
                <div class="bg-light p-4 mb-30">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <input type="number" name="minPrice" class="form-control" placeholder="Từ" value="@minPrice" style="margin-right: 5px;">
                        <span> - </span>
                        <input type="number" name="maxPrice" class="form-control" placeholder="Đến" value="@maxPrice" style="margin-left: 5px;">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Áp dụng</button>
                    <a href="/Product" class="btn btn-block btn-outline-secondary mt-2">Đặt lại</a>
                </div>

            </form>
        </div>
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">

                <div class="col-12 pb-1">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div>
                            <button class="btn btn-sm btn-light"><i class="fa fa-th-large"></i></button>
                            <button class="btn btn-sm btn-light ml-2"><i class="fa fa-bars"></i></button>
                        </div>
                        <div class="ml-2">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">Sắp xếp</button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#">Mới nhất</a>
                                    <a class="dropdown-item" href="#">Phổ biến</a>
                                    <a class="dropdown-item" href="#">Đánh giá cao</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                            <div class="product-item bg-light mb-4">
                                <div class="product-img position-relative overflow-hidden">
                                    @{
                                        string imgUrl = item.Images?.FirstOrDefault()?.ImageUrl ?? "/img/default-shoe.jpg";
                                    }
                                    <img class="img-fluid w-100" src="@imgUrl" alt="@item.Name" style="height: 300px; object-fit: cover;">

                                    <div class="product-action">
                                        <a class="btn btn-outline-dark btn-square" href="#"><i class="fa fa-shopping-cart"></i></a>
                                        <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>
                                        <a class="btn btn-outline-dark btn-square" href="/Product/Detail/@item.Id"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="text-center py-4">
                                    <a class="h6 text-decoration-none text-truncate" href="/Product/Detail/@item.Id">@item.Name</a>
                                    <div class="d-flex align-items-center justify-content-center mt-2">
                                        <h5>@item.Price.ToString("N0") ₫</h5>
                                        @if (item.OriginalPrice.HasValue)
                                        {
                                            <h6 class="text-muted ml-2"><del>@item.OriginalPrice.Value.ToString("N0") ₫</del></h6>
                                        }
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center mb-1">
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small class="fa fa-star text-primary mr-1"></small>
                                        <small>(99)</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <p class="text-center">Không tìm thấy sản phẩm nào phù hợp.</p>
                    </div>
                }

                <div class="col-12">
                    <nav>
                        <ul class="pagination justify-content-center">
                            @{
                                // Code an toàn: Nếu ViewBag null thì lấy giá trị mặc định là 1
                                int currentPage = ViewBag.Page as int? ?? 1;
                                int totalItems = ViewBag.TotalItems as int? ?? 0;
                                int pageSize = ViewBag.PageSize as int? ?? 9;
                                int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
                            }

                            @if (currentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-page="@(currentPage - 1)"
                                       asp-route-categoryId="@ViewBag.CurrentCategory"
                                       asp-route-brandId="@ViewBag.CurrentBrand"
                                       asp-route-search="@ViewBag.Search">Trước</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled"><a class="page-link" href="#">Trước</a></li>
                            }

                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(currentPage == i ? "active" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-categoryId="@ViewBag.CurrentCategory"
                                       asp-route-brandId="@ViewBag.CurrentBrand"
                                       asp-route-search="@ViewBag.Search">@i</a>
                                </li>
                            }

                            @if (currentPage < totalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-page="@(currentPage + 1)"
                                       asp-route-categoryId="@ViewBag.CurrentCategory"
                                       asp-route-brandId="@ViewBag.CurrentBrand"
                                       asp-route-search="@ViewBag.Search">Sau</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled"><a class="page-link" href="#">Sau</a></li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>