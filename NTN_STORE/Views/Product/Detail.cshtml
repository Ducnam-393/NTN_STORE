        border: 2px solid transparent;
        border-radius: 8px;
        cursor: pointer;
        object-fit: cover;
        opacity: 0.6;
        transition: all 0.2s;
    }

        .thumb-item:hover, .thumb-item.active {
            opacity: 1;
            border-color: #f58220;
        }

    /* --- 3. PRODUCT INFO --- */
    .product-title {
        font-size: 2rem;
        font-weight: 800;
        color: #222;
        letter-spacing: -0.5px;
    }

    .price-box {
        margin: 20px 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .current-price {
