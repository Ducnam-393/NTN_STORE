@model NTN_STORE.Models.ViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = Model.Product.Name;
}

<div class="container-fluid pb-5">

    <div class="row px-xl-5">

        <!-- LEFT: Product Images -->
        <div class="col-lg-5 mb-30">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">

                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        <li data-target="#product-carousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                </ol>

                <div class="carousel-inner bg-light">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img class="w-100" src="@Model.Images[i].ImageUrl" style="height:450px; object-fit:cover;">
                        </div>
                    }
                </div>

            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">

                <form asp-controller="Cart" asp-action="AddToCart" method="post">

                    <input type="hidden" name="productId" value="@Model.Product.Id" />

                    <h3>@Model.Product.Name</h3>

                    <div class="d-flex mb-3">
                        <small class="mr-2 text-warning">
                            <i class="fa fa-star"></i><i class="fa fa-star"></i>
                            <i class="fa fa-star"></i><i class="fa fa-star"></i>
                            <i class="far fa-star"></i>
                        </small>
                        <small>(120 đánh giá)</small>
                    </div>

                    <h3 class="font-weight-semi-bold mb-4">
                        @Model.Product.Price.ToString("N0") ₫
                    </h3>

                    <p class="mb-4">@Model.Product.Description</p>

                    <hr />

                    <div class="mb-3">
                        <strong class="text-dark mr-3">Chọn phiên bản (Size & Màu):</strong>

                        @foreach (var variant in Model.Variants.OrderBy(v => v.Color).ThenBy(v => v.Size))
                        {
                            // Kiểm tra hàng tồn kho
                            bool isOutOfStock = variant.Stock <= 0;

                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio"
                                       id="variant-@variant.Id"
                                       name="variantId"
                                       value="@variant.Id"
                                       class="custom-control-input"
                                       @(isOutOfStock ? "disabled" : "")
                                       required>

                                <label class="custom-control-label" for="variant-@variant.Id">
                                    @variant.Color - @variant.Size
                                    @(isOutOfStock ? " (Hết hàng)" : "")
                                </label>
                            </div>
                        }
                    </div>


                    <div class="d-flex align-items-center mb-4 pt-2">
                        <div class="input-group quantity mr-3" style="width: 130px;">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-minus">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>

                            <input type="text" name="quantity" class="form-control bg-secondary border-0 text-center" value="1">

                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-plus">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary px-3">
                            <i class="fa fa-shopping-cart mr-1"></i> Thêm vào giỏ
                        </button>
                    </div>

                </form>
            </div>
        </div>



    <!-- Related products -->
    <div class="container-fluid py-5">
        <h3 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
            <span class="bg-secondary pr-3">Sản phẩm liên quan</span>
        </h3>

        <div class="row px-xl-5">

            @foreach (var item in Model.RelatedProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <div class="product-item bg-light mb-4">

                        <div class="product-img position-relative overflow-hidden">
                            @{
                                var firstImage = item.Images?.FirstOrDefault()?.ImageUrl
                                ?? "~/img/no-image.jpg";
                            }

                            <img class="img-fluid w-100" src="@firstImage" alt="">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" href="/Product/Detail/@item.Id"><i class="fa fa-search"></i></a>
                            </div>
                        </div>

                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="/Product/Detail/@item.Id">
                                @item.Name
                            </a>

                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>@String.Format("{0:#,0} đ", item.Price)</h5>
                            </div>
                        </div>

                    </div>
                </div>
            }

        </div>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} 
}