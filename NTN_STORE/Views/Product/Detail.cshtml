        color: #d0021b;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    /* --- 4. VARIANTS (SWATCHES) --- */
    .swatch-label {
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 8px;
        color: #555;
    }

    /* Color Swatch */
    .color-options {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 20px;
    }

    .swatch-color {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        border: 2px solid #eee;
        cursor: pointer;
        position: relative;
        transition: all 0.2s;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

        .swatch-color:hover {
            transform: scale(1.1);
        }

        .swatch-color.selected {
            border-color: #f58220;
            transform: scale(1.15);
        }

            .swatch-color.selected::after {
                content: '\f00c';
                font-family: "Font Awesome 5 Free";
                font-weight: 900;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                color: #fff;
                font-size: 14px;
                text-shadow: 0 0 2px rgba(0,0,0,0.5);
            }

    /* Size Swatch */
    .size-options {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 20px;
    }

    .swatch-size {
        min-width: 45px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #e0e0e0;
        background: #fff;
        border-radius: 6px;
        font-weight: 600;
        color: #333;
        cursor: pointer;
        transition: all 0.2s;
    }

        .swatch-size:hover {
            border-color: #f58220;
            color: #f58220;
        }

        .swatch-size.selected {
            background: #f58220;
            color: white;
            border-color: #f58220;
            box-shadow: 0 4px 10px rgba(245, 130, 32, 0.3);
        }

        .swatch-size.disabled {
            background: #f8f9fa;
            color: #ccc;
            border-color: #eee;
            cursor: not-allowed;
            text-decoration: line-through;
        }

    /* --- 5. ACTIONS --- */
    .quantity-control {
        display: flex;
        border: 1px solid #ddd;
        border-radius: 6px;
        overflow: hidden;
        width: fit-content;
    }

    .qty-btn {
        border: none;
        background: #fff;
        width: 40px;
        height: 48px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: 0.2s;
    }

        .qty-btn:hover {
            background: #f0f0f0;
        }

    .qty-input {
        border: none;
        width: 50px;
        text-align: center;
        font-weight: 600;
        font-size: 1.1rem;
        outline: none;
    }

    .btn-buy {
        background: linear-gradient(45deg, #f58220, #ff6b6b);
        border: none;
        color: white;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        height: 50px;
        border-radius: 6px;
        width: 100%;
        font-size: 1.1rem;
        transition: all 0.3s;
        box-shadow: 0 5px 15px rgba(245, 130, 32, 0.3);
    }

        .btn-buy:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(245, 130, 32, 0.4);
        }

        .btn-buy:disabled {
            background: #ccc;
            cursor: not-allowed;
            box-shadow: none;
        }

    /* --- 6. REVIEWS & RATING (LÀM ĐẸP PHẦN NÀY) --- */
    .review-section {
        background: #fff;
        border-top: 1px solid #eee;
        margin-top: 3rem;
        padding-top: 3rem;
    }

    /* Star Rating Input (Tương tác) */
    .star-rating-input {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
        gap: 5px;
    }

        .star-rating-input input {
            display: none;
        }

        .star-rating-input label {
            cursor: pointer;
            font-size: 2rem;
            color: #ddd;
            transition: color 0.2s;
        }

            .star-rating-input label:hover,
            .star-rating-input label:hover ~ label,
            .star-rating-input input:checked ~ label {
                color: #ffc107;
            }
    /* Màu vàng khi hover/check */

    /* File Upload đẹp */
    .custom-file-upload {
        border: 2px dashed #ddd;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
        background: #fcfcfc;
    }

        .custom-file-upload:hover {
            border-color: #f58220;
            background: #fff5eb;
        }

        .custom-file-upload i {
            font-size: 2rem;
            color: #aaa;
            margin-bottom: 10px;
        }

    .upload-preview {
        display: flex;
        gap: 10px;
        margin-top: 10px;
        flex-wrap: wrap;
    }

        .upload-preview img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 4px;
        }

    /* Review Item */
    .review-item {
        background: #fff;
        border-bottom: 1px solid #f0f0f0;
        padding: 20px 0;
    }

    .review-avatar {
        width: 50px;
        height: 50px;
        background: #e9ecef;
        color: #6c757d;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 1.2rem;
    }

    .review-images-grid {
        display: flex;
        gap: 8px;
        margin-top: 10px;
    }

    .review-img-thumb {
        width: 80px;
        height: 80px;
        border-radius: 6px;
        object-fit: cover;
        cursor: zoom-in;
        border: 1px solid #eee;
        transition: transform 0.2s;
    }

        .review-img-thumb:hover {
            transform: scale(1.05);
        }
    /* CSS ZOOM */
    .gallery-main-img-wrap {
        position: relative;
        overflow: hidden;
        cursor: crosshair;
        border: 1px solid #eee;
        border-radius: 10px;
    }

    .gallery-main-img {
        width: 100%;
        height: 500px;
        object-fit: contain;
        transition: transform 0.1s; /* Mượt mà */
    }

    .stock-status {
        font-size: 0.9rem;
        margin-left: 10px;
        font-weight: 600;
    }

    .text-stock-ok {
        color: #28a745;
    }

    .text-stock-out {
        color: #dc3545;
    }
    /* --- STYLE BÌNH LUẬN & ĐÁNH GIÁ (MỚI) --- */
    .review-section {
        background: #fff;
        border-top: 1px solid #f0f0f0;
        padding-top: 40px;
        margin-top: 40px;
    }

    .review-item {
        border-bottom: 1px solid #eee;
        padding: 20px 0;
    }

        .review-item:last-child {
            border-bottom: none;
        }

    /* Avatar khách hàng */
    .review-avatar {
        width: 50px;
        height: 50px;
        background-color: #f0f0f0;
        color: #888;
        font-weight: 700;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        border: 1px solid #e0e0e0;
    }

    /* Tên & Ngày */
    .review-user-name {
        font-weight: 600;
        color: #333;
        font-size: 0.95rem;
    }

    .review-date {
        font-size: 0.8rem;
        color: #999;
    }

    /* Nội dung & Ảnh */
    .review-content {
        color: #444;
        margin-top: 8px;
        line-height: 1.5;
    }

    .review-img-grid {
        display: flex;
        gap: 10px;
        margin-top: 10px;
    }

    .review-img-thumb {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 4px;
        border: 1px solid #eee;
        cursor: pointer;
        transition: 0.2s;
    }

        .review-img-thumb:hover {
            transform: scale(1.05);
            border-color: #f58220;
        }

    /* --- ADMIN REPLY BOX (QUAN TRỌNG) --- */
    .admin-reply-box {
        background-color: #f8f9fa; /* Nền xám nhẹ */
        border-left: 3px solid #f58220; /* Viền cam nổi bật */
        padding: 15px;
        margin-top: 15px;
        margin-left: 60px; /* Thụt vào trong so với avatar khách */
        border-radius: 0 4px 4px 0;
        position: relative;
    }

        /* Mũi tên chỉ lên (Tùy chọn trang trí) */
        .admin-reply-box::before {
            content: "";
            position: absolute;
            top: -8px;
            left: 15px;
            border-width: 0 8px 8px 8px;
            border-style: solid;
            border-color: transparent transparent #f58220 transparent;
        }

    .shop-badge {
        background: #f58220;
        color: white;
        font-size: 0.75rem;
        padding: 2px 6px;
        border-radius: 3px;
        font-weight: normal;
        margin-left: 5px;
        text-transform: uppercase;
    }
</style>

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0 m-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
            <li class="breadcrumb-item active">@Model.Product.Name</li>
        </ol>
    </nav>

    <div class="row gx-5">
        <div class="col-lg-6 mb-5">
            <div class="gallery-container">
                @if (Model.Images != null && Model.Images.Any())
                {
                    <img id="mainImage" src="@Model.Images[0].ImageUrl" class="gallery-main-img" alt="@Model.Product.Name">
                }
                else
                {
                    <img src="/img/no-image.jpg" class="gallery-main-img" alt="No Image">
                }
            </div>
            @if (Model.Images != null && Model.Images.Count > 1)
            {
                <div class="gallery-thumbs">
                    @foreach (var img in Model.Images)
                    {
                        <img src="@img.ImageUrl" class="thumb-item" onclick="changeImage(this, '@img.ImageUrl')">
                    }
                </div>
            }
        </div>

        <div class="col-lg-6">
            <div class="mb-2 text-uppercase fw-bold text-muted small">@Model.Product.Brand?.Name</div>
            <h1 class="product-title">@Model.Product.Name</h1>

            <div class="d-flex align-items-center mt-2">
                <div class="text-warning me-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Round(Model.AverageRating))
                        {
                            <i class="fas fa-star"></i>
                        }
                        else
                        {

                            <i class="far fa-star text-muted"></i>
                        }
                    }
                </div>
                <span class="text-muted small">(@Model.ReviewCount đánh giá)</span>
            </div>

            <div class="price-box">
                <span class="current-price">@Model.Product.Price.ToString("N0")₫</span>
                @if (Model.Product.OriginalPrice > Model.Product.Price)
                {
                    <span class="old-price">@Model.Product.OriginalPrice.Value.ToString("N0")₫</span>
                    <span class="sale-badge">Giảm @Math.Round((1 - (Model.Product.Price / Model.Product.OriginalPrice.Value)) * 100)%</span>
                }
            </div>

            <form asp-controller="Cart" asp-action="AddToCart" method="post" id="addToCartForm" onsubmit="return ajaxAddToCart(this)">
                <input type="hidden" name="productId" value="@Model.Product.Id" />
                <input type="hidden" id="selectedVariantId" name="variantId" required />

                <div class="mb-4">
                    <div class="swatch-label">Màu sắc: <span id="color-name" class="fw-normal text-dark"></span></div>
                    <div class="color-options">
                        @foreach (var group in colorVariants)
                        {
                            var hex = GetColorStyle(group.Key);
                            <div class="swatch-color"
                                 style="background-color: @hex;"
                                 title="@group.Key"
                                 onclick="selectColor(this, '@group.Key')">
                            </div>
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <div class="swatch-label">Kích thước:</div>
                    <div class="size-options">
                        @foreach (var size in allSizes)
                        {
                            <div class="swatch-size disabled" data-size="@size" onclick="selectSize(this, '@size')">@size</div>
                        }
                    </div>
                </div>

                <div class="mb-4 d-flex align-items-center">
                    <span class="text-muted small">Tình trạng:</span>
                    <span id="stock-display" class="stock-status text-muted">Vui lòng chọn phân loại</span>
                </div>

                <div id="buy-block">
                    <div class="row align-items-end">
                        <div class="col-4 col-sm-3">
                            <div class="swatch-label">Số lượng</div>
                            <div class="quantity-control">
                                <button type="button" class="qty-btn" onclick="updateQty(-1)">-</button>
                                <input type="number" name="quantity" id="quantity" class="qty-input" value="1" min="1">
                                <button type="button" class="qty-btn" onclick="updateQty(1)">+</button>
                            </div>
                        </div>
                        <div class="col-8 col-sm-9">
                            <button type="submit" id="btnAddToCart" class="btn-buy" disabled>
                                <i class="fas fa-shopping-bag me-2"></i> CHỌN PHÂN LOẠI
                            </button>
                        </div>
                    </div>
                </div>

                <div id="notify-block" style="display: none;" class="bg-light p-3 rounded border border-warning mt-3">
                    <h6 class="text-danger fw-bold"><i class="fas fa-bell-slash me-2"></i>Sản phẩm tạm hết hàng</h6>
                    <p class="small mb-2 text-muted">Để lại email, chúng tôi sẽ thông báo ngay khi có hàng!</p>
                    <div class="input-group">
                        <input type="email" id="notifyEmail" class="form-control" placeholder="Nhập email của bạn...">
                        <button type="button" class="btn btn-warning text-white fw-bold" onclick="registerNotify()">Đăng ký nhận tin</button>
                    </div>
                </div>
            </form>

            <div class="row mt-4 pt-4 border-top g-3">
                <div class="col-6 text-muted small"><i class="fas fa-truck text-warning me-2"></i>Freeship đơn từ 1500k</div>
                <div class="col-6 text-muted small"><i class="fas fa-sync text-warning me-2"></i>Đổi trả trong 7 ngày</div>
                <div class="col-6 text-muted small"><i class="fas fa-shield-alt text-warning me-2"></i>Bảo hành chính hãng</div>
                <div class="col-6 text-muted small"><i class="fas fa-phone-alt text-warning me-2"></i>Hotline: 1900 1234</div>
            </div>
        </div>
    </div>
    <div class="description-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <h3 class="fw-bold border-bottom pb-3 mb-4 text-uppercase text-center">Chi tiết sản phẩm</h3>

                    <div class="desc-content">
                        @if (!string.IsNullOrEmpty(Model.Product.Description))
                        {
                            @Html.Raw(Model.Product.Description)
                        }
                        else
                        {
                            <p class="text-center text-muted">Đang cập nhật mô tả cho sản phẩm này...</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="review-section bg-white py-5 border-top mt-5" id="reviews">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">

                    <div class="text-center mb-5">
                        <h3 class="fw-bold text-uppercase">Đánh giá từ khách hàng</h3>
                        <div class="d-flex justify-content-center align-items-center gap-2 mt-2">
                            <span class="display-4 fw-bold text-warning">@Model.AverageRating.ToString("0.0")</span>
                            <div class="text-start">
                                <div class="text-warning small">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Round(Model.AverageRating))
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        else
                                        {

                                            <i class="far fa-star text-secondary opacity-25"></i>
                                        }
                                    }
                                </div>
                                <div class="text-muted small">(@Model.ReviewCount lượt đánh giá)</div>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm mb-5" style="background-color: #f8f9fa;">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-3 border-start border-4 border-warning ps-3">Viết cảm nhận của bạn</h5>

                            <form asp-action="PostReview" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="NewReview.ProductId" value="@Model.Product.Id" />

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-uppercase text-muted">Mức độ hài lòng</label>
                                        <select name="NewReview.Rating" class="form-select border-0 shadow-none">
                                            <option value="5">⭐⭐⭐⭐⭐ - Tuyệt vời</option>
                                            <option value="4">⭐⭐⭐⭐ - Hài lòng</option>
                                            <option value="3">⭐⭐⭐ - Bình thường</option>
                                            <option value="2">⭐⭐ - Không hài lòng</option>
                                            <option value="1">⭐ - Tệ</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold small text-uppercase text-muted">Hình ảnh (Tùy chọn)</label>
                                        <input type="file" name="NewReview.ReviewImages" class="form-control border-0 shadow-none" multiple accept="image/*" />
                                    </div>
                                    <div class="col-12">
                                        <textarea name="NewReview.Comment" class="form-control border-0 shadow-none" rows="3" placeholder="Sản phẩm thế nào? Chất lượng ra sao? Hãy chia sẻ với mọi người..." required></textarea>
                                    </div>
                                    <div class="col-12 text-end">
                                        <button type="submit" class="btn btn-warning text-white fw-bold px-4 rounded-pill shadow-sm">
                                            <i class="fas fa-paper-plane me-2"></i>Gửi đánh giá
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        foreach (var review in Model.Reviews)
                        {
                            if (review.IsVisible)
                            {
                                <div class="review-item py-4 border-bottom">
                                    <div class="d-flex align-items-start">
                                        <div class="flex-shrink-0 me-3">
                                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center fw-bold"
                                                 style="width: 50px; height: 50px; font-size: 1.2rem;">
                                                @(review.User?.UserName?.Substring(0, 1).ToUpper() ?? "U")
                                            </div>
                                        </div>

                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                <h6 class="fw-bold mb-0">@review.User?.UserName</h6>
                                                <span class="text-muted small">@review.CreatedAt.ToString("dd/MM/yyyy")</span>
                                            </div>

                                            <div class="text-warning small mb-2">
                                                @for (int i = 0; i < 5; i++)
                                                {
                                                    if (i < review.Rating)
                                                    {
                                                        <i class="fas fa-star"></i>
                                                    }
                                                    else
                                                    {

                                                        <i class="far fa-star text-muted opacity-25"></i>
                                                    }
                                                }
                                            </div>

                                            <p class="text-dark mb-2" style="white-space: pre-line;">@review.Comment</p>

                                            @if (review.Images != null && review.Images.Any())
                                            {
                                                <div class="d-flex gap-2 mb-3">
                                                    @foreach (var img in review.Images)
                                                    {
                                                        <a href="@img.Url" target="_blank">
                                                            <img src="@img.Url" class="rounded border" style="width: 70px; height: 70px; object-fit: cover;">
                                                        </a>
                                                    }
                                                </div>
                                            }

                                            @if (!string.IsNullOrEmpty(review.Reply))
                                            {
                                                <div class="mt-3 p-3 rounded" style="background-color: #fdfdfd; border-left: 4px solid #f58220; border: 1px solid #eee; border-left-width: 4px;">
                                                    <div class="d-flex align-items-center mb-2">
                                                        <span class="badge bg-warning text-dark me-2">Shop Phản Hồi</span>
                                                        <small class="text-muted">
                                                            <i class="far fa-clock me-1"></i>
                                                            @(review.ReplyDate.HasValue? review.ReplyDate.Value.ToString("dd/MM/yyyy HH:mm") : "")
                                                        </small>
                                                    </div>

                                                    <p class="mb-0 text-dark" style="font-size: 0.95rem; line-height: 1.5; font-weight: 500;">
                                                        @review.Reply
                                                    </p>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted opacity-50">
                            <i class="far fa-comment-dots fa-3x mb-3"></i>
                            <p>Chưa có đánh giá nào. Hãy là người đầu tiên!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.RecentlyViewed != null)
    {
        var viewed = ViewBag.RecentlyViewed as List<NTN_STORE.Models.Product>;
        if (viewed != null && viewed.Any())
        {
            <div class="container py-5 border-top">
                <h3 class="fw-bold text-uppercase mb-4">Sản phẩm đã xem</h3>
                <div class="row g-4">
                    @foreach (var item in viewed)
                    {
                        @await Html.PartialAsync("_ProductCard", item)
                    }
                </div>
            </div>
        }
    }
</div>

<script>
    // 1. Đổi ảnh Gallery
    function changeImage(element, src) {
        document.getElementById('mainImage').src = src;
        document.querySelectorAll('.thumb-item').forEach(el => el.classList.remove('active'));
        element.classList.add('active');
    }

    // 2. Preview ảnh upload
    function previewImages(input) {
        var container = document.getElementById('imagePreviewContainer');
        container.innerHTML = '';
        if (input.files) {
            Array.from(input.files).forEach(file => {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var img = document.createElement('img');
                    img.src = e.target.result;
                    container.appendChild(img);
                }
                reader.readAsDataURL(file);
            });
        }
    }

    // 3. Logic chọn Variant (Size/Color)
        var variants = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                Model.Variants.Select(v => new { v.Id, v.Color, v.Size, v.Stock }),
                new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = null }
        ));
    var selectedColor = null;
    var selectedSize = null;

    function selectColor(el, color) {
        // UI: Highlight nút màu
        document.querySelectorAll('.swatch-color').forEach(e => e.classList.remove('selected'));
        el.classList.add('selected');
        selectedColor = color;
        document.getElementById('color-name').innerText = color;

        // Logic: Reset size & lọc size có sẵn cho màu này
        selectedSize = null;
        document.querySelectorAll('.swatch-size').forEach(e => {
            e.classList.remove('selected');
            e.classList.add('disabled');
        });

        // Tìm các size CÓ THỰC (bất kể stock = 0 hay > 0) của màu này
        var validSizes = variants.filter(v => v.Color === color).map(v => v.Size);

        document.querySelectorAll('.swatch-size').forEach(e => {
            if (validSizes.includes(e.getAttribute('data-size'))) {
                e.classList.remove('disabled');
            }
        });

        checkSelection();
    }

    function selectSize(el, size) {
        if (el.classList.contains('disabled')) return;

        document.querySelectorAll('.swatch-size').forEach(e => e.classList.remove('selected'));
        el.classList.add('selected');
        selectedSize = size;

        checkSelection();
    }

    function checkSelection() {
        var buyBlock = document.getElementById('buy-block');
        var notifyBlock = document.getElementById('notify-block');
        var btnBuy = document.getElementById('btnAddToCart');
        var stockDisplay = document.getElementById('stock-display');
        var inputId = document.getElementById('selectedVariantId');
        var qtyInput = document.getElementById('quantity');

        if (selectedColor && selectedSize) {
            var variant = variants.find(v => v.Color === selectedColor && v.Size === selectedSize);

            if (variant) {
                inputId.value = variant.Id;

                if (variant.Stock > 0) {
                    // === CÒN HÀNG ===
                    buyBlock.style.display = 'block';
                    notifyBlock.style.display = 'none';

                    btnBuy.disabled = false;
                    btnBuy.innerHTML = '<i class="fas fa-shopping-bag me-2"></i> THÊM VÀO GIỎ';
                    qtyInput.max = variant.Stock; // Đặt max
                    qtyInput.value = 1; // Reset về 1
                    stockDisplay.innerText = `Còn ${variant.Stock} sản phẩm`;
                    stockDisplay.className = "stock-status text-stock-ok";
                } else {
                    // === HẾT HÀNG ===
                    buyBlock.style.display = 'none';
                    notifyBlock.style.display = 'block';

                    stockDisplay.innerText = "Hết hàng";
                    stockDisplay.className = "stock-status text-stock-out";
                }
            }
        } else {
            // Chưa chọn đủ
            buyBlock.style.display = 'block';
            notifyBlock.style.display = 'none';
            btnBuy.disabled = true;
            btnBuy.innerHTML = 'Vui lòng chọn phân loại';
            stockDisplay.innerText = "Vui lòng chọn màu & size";
            stockDisplay.className = "stock-status text-muted";
        }
    }

        function updateQty(val) {
        var el = document.getElementById('quantity');
        var max = parseInt(el.max) || 9999;
        var v = parseInt(el.value) + val;

        if (v >= 1 && v <= max) {
            el.value = v;
        } else if (v > max) {
               Swal.fire({
        icon: 'warning',
        title: `Bạn chỉ có thể mua tối đa ${max} sản phẩm.`,
        toast: true,
        position: 'top-end',
        timer: 2000,
        showConfirmButton: false
    });

            el.value = max;
        }
    }


    function registerNotify() {
        var email = $('#notifyEmail').val();
        var productId = '@Model.Product.Id';
        var note = `Khách quan tâm: ${selectedColor} - ${selectedSize}`;

        if(!email) { alert('Vui lòng nhập email!'); return; }

        $.post('/Product/SubscribeStock', { email: email, productId: productId, note: note }, function(res) {
            alert(res.message);
            if(res.success) $('#notifyEmail').val('');
        });
    }
     // JS ZOOM
    function zoom(e) {
        var zoomer = e.currentTarget;
        var img = document.getElementById('mainImage');

        // Tính toán vị trí chuột
        offsetX = e.offsetX;
        offsetY = e.offsetY;
        x = offsetX / zoomer.offsetWidth * 100;
        y = offsetY / zoomer.offsetHeight * 100;

        // Zoom 2x (scale 2)
        img.style.transformOrigin = x + '% ' + y + '%';
        img.style.transform = "scale(2)";
    }

    function resetZoom() {
        var img = document.getElementById('mainImage');
        img.style.transform = "scale(1)";
    }
</script>

<div class="gallery-main-img-wrap" id="imgContainer" onmousemove="zoom(event)" onmouseleave="resetZoom()">
    <img id="mainImage" src="@Model.Images[0].ImageUrl" class="gallery-main-img" alt="@Model.Product.Name">
</div>

