@model NTN_STORE.Models.ViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = Model.Product.Name;
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/">Trang chủ</a>
                <a class="breadcrumb-item text-dark" href="#">Sản phẩm</a>
                <span class="breadcrumb-item active">Chi tiết sản phẩm</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        <li data-target="#product-carousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                </ol>
                <div class="carousel-inner bg-light">
                    @if (Model.Images != null && Model.Images.Count > 0)
                    {
                        for (int i = 0; i < Model.Images.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img class="w-100 h-100" src="@Model.Images[i].ImageUrl" alt="Image" style="object-fit: contain; height: 500px !important;">
                            </div>
                        }
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img class="w-100 h-100" src="~/img/no-image.jpg" alt="Image">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                    <i class="fa fa-2x fa-angle-left text-dark"></i>
                </a>
                <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                    <i class="fa fa-2x fa-angle-right text-dark"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.Product.Name</h3>
                <div class="d-flex mb-3">
                    <div class="text-primary mr-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <small class="@(i <= Math.Round(Model.AverageRating) ? "fas" : "far") fa-star"></small>
                        }
                    </div>
                    <small class="pt-1">(@Model.ReviewCount đánh giá)</small>
                </div>
                <h3 class="font-weight-semi-bold mb-4">@Model.Product.Price.ToString("N0") ₫</h3>
                <p class="mb-4">@Model.Product.Description</p>

                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.Product.Id" />

                    @if (Model.Variants != null && Model.Variants.Any())
                    {
                        <div class="d-flex mb-3">
                            <strong class="text-dark mr-3">Kích thước & Màu sắc:</strong>
                            <div class="custom-control-group">
                                @foreach (var variant in Model.Variants.OrderBy(v => v.Color).ThenBy(v => v.Size))
                                {
                                    bool isOutOfStock = variant.Stock <= 0;
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="variant-@variant.Id" name="variantId" value="@variant.Id" @(isOutOfStock ? "disabled" : "") required>
                                        <label class="custom-control-label" for="variant-@variant.Id">
                                            @variant.Color - Size @variant.Size @(isOutOfStock ? "(Hết)" : "")
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="d-flex align-items-center mb-4 pt-2">
                        <div class="input-group quantity mr-3" style="width: 130px;">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-minus">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" name="quantity" class="form-control bg-secondary border-0 text-center" value="1">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-plus">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary px-3"><i class="fa fa-shopping-cart mr-1"></i> Thêm vào giỏ hàng</button>
                    </div>
                </form>

                <div class="d-flex pt-2">
                    <strong class="text-dark mr-2">Chia sẻ:</strong>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="text-dark px-2" href=""><i class="fab fa-twitter"></i></a>
                        <a class="text-dark px-2" href=""><i class="fab fa-linkedin-in"></i></a>
                        <a class="text-dark px-2" href=""><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-1">Mô tả</a>
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-3">Đánh giá (@Model.ReviewCount)</a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade" id="tab-pane-1">
                        <h4 class="mb-3">Mô tả sản phẩm</h4>
                        <p>@Model.Product.Description</p>
                    </div>

                    <div class="tab-pane fade show active" id="tab-pane-3">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="mb-4">@Model.ReviewCount đánh giá cho "@Model.Product.Name"</h4>
                                @if (Model.Reviews != null && Model.Reviews.Any())
                                {
                                    @foreach (var review in Model.Reviews)
                                    {
                                        <div class="media mb-4">
                                            <img src="~/img/user.png" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                                            <div class="media-body">
                                                <h6>@review.UserId <small> - <i>@review.CreatedAt.ToString("dd/MM/yyyy")</i></small></h6>
                                                <div class="text-primary mb-2">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <i class="@(i <= review.Rating ? "fas" : "far") fa-star"></i>
                                                    }
                                                </div>
                                                <p>@review.Comment</p>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">Chưa có đánh giá nào. Hãy là người đầu tiên đánh giá sản phẩm này!</p>
                                }
                            </div>

                            <div class="col-md-6">
                                <h4 class="mb-4">Gửi đánh giá của bạn</h4>
                                <small>Địa chỉ email của bạn sẽ không được công bố. Các trường bắt buộc được đánh dấu *</small>

                                @if (TempData["ReviewSuccess"] != null)
                                {
                                    <div class="alert alert-success mt-3">@TempData["ReviewSuccess"]</div>
                                }
                                @if (TempData["ReviewError"] != null)
                                {
                                    <div class="alert alert-danger mt-3">@TempData["ReviewError"]</div>
                                }

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form asp-controller="Product" asp-action="PostReview" method="post" class="mt-3">
                                        <input type="hidden" asp-for="NewReview.ProductId" value="@Model.Product.Id" />
                                        <input type="hidden" id="selected-rating" asp-for="NewReview.Rating" />

                                        <div class="d-flex my-3">
                                            <p class="mb-0 mr-2">Đánh giá sao * :</p>
                                            <div class="text-primary">
                                                <i class="far fa-star rating-star" data-rating="1" style="cursor:pointer; font-size: 1.2rem;"></i>
                                                <i class="far fa-star rating-star" data-rating="2" style="cursor:pointer; font-size: 1.2rem;"></i>
                                                <i class="far fa-star rating-star" data-rating="3" style="cursor:pointer; font-size: 1.2rem;"></i>
                                                <i class="far fa-star rating-star" data-rating="4" style="cursor:pointer; font-size: 1.2rem;"></i>
                                                <i class="far fa-star rating-star" data-rating="5" style="cursor:pointer; font-size: 1.2rem;"></i>
                                            </div>
                                            <span asp-validation-for="NewReview.Rating" class="text-danger ml-2"></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="message">Nội dung đánh giá *</label>
                                            <textarea asp-for="NewReview.Comment" id="message" cols="30" rows="5" class="form-control"></textarea>
                                            <span asp-validation-for="NewReview.Comment" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label for="name">Tên hiển thị</label>
                                            <input type="text" class="form-control" id="name" value="@User.Identity.Name" readonly disabled>
                                        </div>

                                        <div class="form-group mb-0">
                                            <input type="submit" value="Gửi đánh giá ngay" class="btn btn-primary px-3">
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <div class="alert alert-warning mt-3">
                                        Vui lòng <a asp-area="Identity" asp-page="/Account/Login" class="font-weight-bold">Đăng nhập</a> để viết đánh giá.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Sản phẩm liên quan</span></h2>
    <div class="row px-xl-5">
        @if (Model.RelatedProducts != null)
        {
            @foreach (var item in Model.RelatedProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                    <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@(item.Images?.FirstOrDefault()?.ImageUrl ?? "/img/no-image.jpg")" alt="" style="height: 300px; object-fit: cover;">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" href="/Product/Detail/@item.Id"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="/Product/Detail/@item.Id">@item.Name</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>@item.Price.ToString("N0") ₫</h5>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Giữ nguyên Script xử lý sao của bạn, nó đã hoạt động tốt
        document.addEventListener('DOMContentLoaded', function () {
            const stars = document.querySelectorAll('.rating-star');
            const ratingInput = document.getElementById('selected-rating');

            function updateStars(rating) {
                stars.forEach(s => {
                    const sRating = parseInt(s.getAttribute('data-rating'));
                    if (sRating <= rating) {
                        s.classList.remove('far');
                        s.classList.add('fas'); // Sử dụng 'fas' cho FontAwesome 5 solid
                    } else {
                        s.classList.remove('fas');
                        s.classList.add('far');
                    }
                });
            }

            stars.forEach(star => {
                star.addEventListener('click', function() {
                    const rating = parseInt(this.getAttribute('data-rating'));
                    ratingInput.value = rating;
                    updateStars(rating);
                });

                star.addEventListener('mouseover', function() {
                    const rating = parseInt(this.getAttribute('data-rating'));
                    stars.forEach(s => {
                        const sRating = parseInt(s.getAttribute('data-rating'));
                        if (sRating <= rating) {
                            s.classList.remove('far');
                            s.classList.add('fas', 'text-warning');
                        }
                    });
                });
                star.addEventListener('mouseout', function() {
                    const selectedRating = parseInt(ratingInput.value) || 0;
                    stars.forEach(s => {
                        s.classList.remove('text-warning');
                        if (parseInt(s.getAttribute('data-rating')) > selectedRating) {
                             s.classList.remove('fas');
                             s.classList.add('far');
                        }
                    });
                    updateStars(selectedRating);
                });
            });

            // Reset stars if validation failed
            const initialRating = parseInt(ratingInput.value) || 0;
            if (initialRating > 0) updateStars(initialRating);
        });
    </script>
}