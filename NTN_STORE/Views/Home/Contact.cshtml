@model NTN_STORE.Models.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Liên hệ";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-controller="Home" asp-action="Index">Trang chủ</a>
                <span class="breadcrumb-item active">Liên hệ</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Liên hệ với chúng tôi</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="bg-light p-30">

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.SuccessMessage
                    </div>
                }

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <form asp-action="Contact" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group mb-3">
                        <label asp-for="Name">Họ tên</label>
                        <input asp-for="Name" class="form-control" placeholder="Tên của bạn" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Email của bạn" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Subject">Tiêu đề</label>
                        <input asp-for="Subject" class="form-control" placeholder="Tiêu đề tin nhắn" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Message">Nội dung</label>
                        <textarea asp-for="Message" class="form-control" rows="8" placeholder="Nội dung tin nhắn"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit">Gửi tin nhắn</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-5 mb-5">
            <div class="bg-light p-30 mb-30">
                <iframe style="width: 100%; height: 315px; border:0;"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d8859.17949611336!2d105.86202522510936!3d20.99960524646399!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ac05404c1b1d%3A0xd865d467337f19d0!2zVHLGsOG7nW5nIMSQ4bqhaSBI4buNYyBLaW5oIFThur8gS-G7uSBUaHXhuq10IEPDtG5nIE5naGnhu4dw!5e0!3m2!1svi!2s!4v1763391049865!5m2!1svi!2s"
                        allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            <div class="bg-light p-30 mb-3">
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>456 P. Minh Khai, Vĩnh Tuy, Hai Bà Trưng, Hà Nội</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>Ducnam@ntnstore.com</p>
                <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3"></i>+0988888888</p>
            </div>
        </div>
    </div>
</div>
