@model NTN_STORE.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-controller="Home" asp-action="Index">Trang chủ</a>
                <a class="breadcrumb-item text-dark" asp-controller="Product" asp-action="Index">Sản phẩm</a>
                <span class="breadcrumb-item active">Giỏ hàng</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            @if (Model.CartItems.Any())
            {
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Tổng</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td class="align-middle text-left">
                                    <img src="@Url.Content(item.Product.Images?.FirstOrDefault()?.ImageUrl ?? "/img/default-shoe.jpg")" alt="@item.Product.Name" style="width: 50px;">

                                    @item.Product.Name

                                    <br /><small>@item.Variant.Color, Size @item.Variant.Size</small>
                                </td>

                                <td class="align-middle">@item.Product.Price.ToString("N0") ₫</td>

                                <td class="align-middle">
                                    <form asp-action="UpdateCart" method="post" class="quantity-form" data-item-id="@item.Id">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <div class="input-group quantity mx-auto" style="width: 100px;">
                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-sm btn-primary btn-minus">
                                                    <i class="fa fa-minus"></i>
                                                </button>
                                            </div>
                                            <input type="text" name="quantity" class="form-control form-control-sm bg-secondary border-0 text-center" value="@item.Quantity">
                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-sm btn-primary btn-plus">
                                                    <i class="fa fa-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </td>
                                <td class="align-middle">@((item.Product.Price * item.Quantity).ToString("N0")) ₫</td>
                                <td class="align-middle">
                                    <form asp-action="RemoveItem" method="post">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <p>Giỏ hàng của bạn đang trống.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Bắt đầu mua sắm</a>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <form class="mb-30" action="">
                <div class="input-group">
                    <input type="text" class="form-control border-0 p-4" placeholder="Mã giảm giá">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Áp dụng</button>
                    </div>
                </div>
            </form>
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Tóm tắt giỏ hàng</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Tạm tính</h6>
                        <h6>@Model.Subtotal.ToString("N0") ₫</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Phí vận chuyển</h6>
                        <h6 class="font-weight-medium">@Model.Shipping.ToString("N0") ₫</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Tổng cộng</h5>
                        <h5>@Model.Total.ToString("N0") ₫</h5>
                    </div>

                    <a asp-controller="Checkout" asp-action="Index"
                       class="btn btn-block btn-primary font-weight-bold my-3 py-3 @(Model.CartItems.Any() ? "" : "disabled")">
                        Tiến hành thanh toán
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {

            // Hàm submit form
            function submitForm(form) {
                // Tùy chọn: Thêm hiệu ứng loading
                $(form).closest('tr').css('opacity', '0.5');
                form.submit();
            }

            // Xử lý nút +/-
          

            // Xử lý khi gõ xong (hoặc nhấn Enter)
             $('form.quantity-form input[name="quantity"]').on('change', function(e) {
                 var form = $(this).closest('form.quantity-form');
                 if(parseFloat($(this).val()) < 0) {
                     $(this).val(0);
                 }
                 submitForm(form[0]);
            });
        });
    </script>
}