@using Microsoft.EntityFrameworkCore
@inject NTN_STORE.Models.NTNStoreContext _context
@{
    var categories = _context.Categories.Include(c => c.Products).ToList();
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
    bool isHomePage = (controller == "Home" && action == "Index");
}
<!-- Topbar Start -->
<div class="container-fluid">
    <div class="row bg-secondary py-1 px-xl-5">
        <div class="col-lg-6 d-none d-lg-block">
            <div class="d-inline-flex align-items-center h-100">
                <a class="text-body mr-3" asp-area="" asp-controller="Home" asp-action="About">Về chúng tôi</a>

                <a class="text-body mr-3" asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a>

                <a class="text-body mr-3" asp-controller="Home" asp-action="Support">Trung tâm trợ giúp </a>
                <a class="text-body mr-3" asp-controller="Home" asp-action="FAQ">Câu hỏi thường gặp (FAQ) </a>
            </div>
        </div>
        <div class="col-lg-6 text-center text-lg-right">
            <div class="d-inline-flex align-items-center">
                <partial name="_LoginPartial" />
            </div>

            <div class="d-inline-flex align-items-center d-block d-lg-none">
                <a href="#" class="btn px-0 ml-2">
                    <i class="fas fa-heart text-dark"></i>
                    <span class="badge text-dark border border-dark rounded-circle">0</span>
                </a>

                <a asp-area="" asp-controller="Cart" asp-action="Index" class="btn px-0 ml-2">
                    <i class="fas fa-shopping-cart text-dark"></i>
                    <span class="badge text-dark border border-dark rounded-circle">0</span>
                </a>
            </div>
        </div>
    </div>

    <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
        <div class="col-lg-4">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none">
                <span class="h1 text-uppercase text-primary bg-dark px-2">NTN</span>
                <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">Store</span>
            </a>
        </div>

        <div class="col-lg-4 col-6 text-left">
            <form asp-area="" asp-controller="Product" asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" placeholder="Tìm giày thể thao...">
                    <div class="input-group-append">
                        <button type="submit" class="input-group-text bg-transparent text-primary">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-lg-4 col-6 text-right">
            <p class="m-0">Hotline</p>
            <h5 class="m-0">09888886666</h5>
        </div>
    </div>
</div>
<!-- Topbar End -->
<!-- Navbar Start -->
<div class="container-fluid bg-dark mb-30">
    <div class="row px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn d-flex align-items-center justify-content-between bg-primary w-100"
               data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                <h6 class="text-dark m-0"><i class="fa fa-bars mr-2"></i>Danh mục giày</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>

            <nav id="navbar-vertical"
                 class="collapse @(isHomePage ? "show" : "") position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light"
                 style="width: calc(100% - 30px); z-index: 999;">
                <div class="navbar-nav w-100">
                    @foreach (var cat in categories)
                    {
                        <a asp-area="" asp-controller="Product" asp-action="Index" asp-route-categoryId="@cat.Id" class="nav-item nav-link">@cat.Name</a>
                    }
                </div>
            </nav>
        </div>

        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3">
                <button type="button" class="navbar-toggler" data-toggle="collapse"
                        data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-item nav-link @(isHomePage ? "active" : "")">Trang chủ</a>
                        <a asp-area="" asp-controller="Product" asp-action="Index" class="nav-item nav-link @(controller == "Product" ? "active" : "")">Sản phẩm</a>
                        <a asp-area="" asp-controller="Cart" asp-action="Index" class="nav-item nav-link @(controller == "Cart" ? "active" : "")">Giỏ hàng</a>
                        <a asp-area="" asp-controller="Checkout" asp-action="Index" class="nav-item nav-link @(controller == "Checkout" ? "active" : "")">Thanh toán</a>
                        <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-item nav-link @(controller == "Home" && action == "Contact" ? "active" : "")">Liên hệ</a>
                    </div>

                    <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                        <a href="#" class="btn px-0">
                            <i class="fas fa-heart text-primary"></i>
                            <span class="badge text-secondary border border-secondary rounded-circle">0</span>
                        </a>

                        <a asp-area="" asp-controller="Cart" asp-action="Index" class="btn px-0 ml-3">
                            <i class="fas fa-shopping-cart text-primary"></i>
                            <span class="badge text-secondary border border-secondary rounded-circle">0</span>
                        </a>
                    </div>
                </div>
            </nav>
        </div>

    </div>
</div>
<!-- Navbar End -->
