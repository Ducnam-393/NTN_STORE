<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NTN Store</title>
    <meta name="description" content="NTN Store - Cửa hàng giày chính hãng hàng đầu Việt Nam">

    <link href="~/favicon.ico" rel="icon" asp-append-version="true">>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" asp-append-version="true">>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" asp-append-version="true">>

    <link href="~/lib/animate/animate.min.css" rel="stylesheet" asp-append-version="true">>
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" asp-append-version="true">>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">>

    <link href="~/css/style.min.css" rel="stylesheet" asp-append-version="true">>
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true">>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" asp-append-version="true">></script>
    <style>

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #fdfdfd;
        }

        .back-to-top {
            position: fixed;
            display: none;
            right: 30px;
            bottom: 30px;
            z-index: 99;
            background: #f58220;
            border-color: #f58220;
            color: white;
            border-radius: 50%;
            width: 45px;
            height: 45px;
            text-align: center;
            line-height: 42px;
            font-size: 18px;
        }

            .back-to-top:hover {
                background: #d46b0f;
                color: white;
            }
    </style>
</head>

<body>
    <header>
        @await Html.PartialAsync("_Header")
        @await Html.PartialAsync("_Navbar")
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>
        @await Html.PartialAsync("_Footer")
    </footer>

    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-up"></i></a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" asp-append-version="true">></script>

    <script src="~/lib/easing/easing.min.js" asp-append-version="true">></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js" asp-append-version="true">></script>
    <script src="~/js/main.js" asp-append-version="true">></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <div class="offcanvas-minicart">
        <div class="offcanvas-backdrop" onclick="closeMiniCart()"></div>
        <div id="miniCartContent" class="offcanvas-content">
            <div class="p-4 text-center"><div class="spinner-border text-warning"></div></div>
        </div>
    </div>
</body>
</html>