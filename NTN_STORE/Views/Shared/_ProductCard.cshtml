@model NTN_STORE.Models.Product

@{
    // Xử lý ảnh: Lấy ảnh đầu tiên hoặc ảnh mặc định
    var imageUrl = (Model.Images != null && Model.Images.Any())
                   ? Model.Images.First().ImageUrl
                   : "/img/no-image.jpg"; // Đảm bảo đường dẫn ảnh mặc định đúng

    // Tính phần trăm giảm giá
    int discount = 0;
    if (Model.OriginalPrice.HasValue && Model.OriginalPrice > Model.Price)
    {
        discount = (int)Math.Round((1 - (Model.Price / Model.OriginalPrice.Value)) * 100);
    }
}

<style>
    /* CSS riêng cho Product Card */
    .product-item {
        transition: all 0.3s ease;
        border: 1px solid #eee;
        border-radius: 8px;
        background: #fff;
        position: relative;
        overflow: hidden;
    }

        .product-item:hover {
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
            transform: translateY(-5px);
            border-color: transparent;
        }

    /* Ảnh sản phẩm */
    .product-img {
        position: relative;
        overflow: hidden;
        padding-top: 100%; /* Tỉ lệ vuông 1:1 */
        background-color: #f8f9fa;
    }

        .product-img img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: contain; /* Hoặc cover nếu muốn cắt ảnh */
            transition: transform 0.5s ease;
        }

    .product-item:hover .product-img img {
        transform: scale(1.08); /* Phóng to nhẹ khi hover */
    }

    /* Action Buttons Overlay */
    .product-action {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        gap: 10px;
        opacity: 0;
        transition: all 0.3s;
        z-index: 2;
    }

    .product-item:hover .product-action {
        opacity: 1;
    }

    .btn-action {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #fff;
        color: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        transition: 0.2s;
    }

        .btn-action:hover {
            background: #f58220; /* Màu cam */
            color: #fff;
        }

    /* Badge Sale */
    .badge-sale {
        position: absolute;
        top: 10px;
        right: 10px;
        background: #d0021b;
        color: white;
        font-size: 12px;
        font-weight: bold;
        padding: 3px 8px;
        border-radius: 4px;
        z-index: 3;
    }

    /* Thông tin bên dưới */
    .product-info {
        padding: 15px;
        text-align: center;
    }

    .product-title {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
        text-decoration: none;
        display: -webkit-box;
        -webkit-line-clamp: 1; /* Giới hạn 1 dòng */
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-bottom: 5px;
        transition: color 0.2s;
    }

        .product-title:hover {
            color: #f58220;
        }

    .price-wrap {
        display: flex;
        justify-content: center;
        align-items: baseline;
        gap: 8px;
    }

    .price-current {
        color: #d0021b;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .price-old {
        color: #999;
        text-decoration: line-through;
        font-size: 0.9rem;
    }
</style>

<div class="col-lg-3 col-md-4 col-sm-6 pb-1">
    <div class="product-item mb-4">
        <div class="product-img">
            <img src="@Url.Content(imageUrl)" alt="@Model.Name">

            @if (discount > 0)
            {
                <span class="badge-sale">-@discount%</span>
            }

            <div class="product-action">
                <a class="btn-action" asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id" title="Xem chi tiết">
                    <i class="fa fa-eye"></i>
                </a>
                <form action="/Cart/AddToCart" method="post" onsubmit="return ajaxAddToCart(this)">
                    <input type="hidden" name="productId" value="@Model.Id">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="btn-action"><i class="fa fa-shopping-cart"></i></button>
                </form>
                <a class="btn-action" asp-controller="Wishlist" asp-action="Add" asp-route-id="@Model.Id" title="Yêu thích">
                    <i class="far fa-heart"></i>
                </a>
            </div>
        </div>

        <div class="product-info">
            <a class="product-title" asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">
                @Model.Name
            </a>
            <div class="price-wrap">
                <span class="price-current">@Model.Price.ToString("N0")₫</span>
                @if (discount > 0)
                {
                    <span class="price-old">@Model.OriginalPrice.Value.ToString("N0")₫</span>
                }
            </div>

            <div class="small text-warning mt-1">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-half-alt"></i>
                <span class="text-muted ms-1 small">(99)</span>
            </div>
        </div>
    </div>
</div>