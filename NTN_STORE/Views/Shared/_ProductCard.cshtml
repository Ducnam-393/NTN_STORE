@model NTN_STORE.Models.Product

@{
    // Lấy ảnh đầu tiên, nếu không có thì dùng ảnh mặc định
    var imageUrl = Model.Images?.FirstOrDefault()?.ImageUrl ?? "~/img/default-shoe.png";
}

<div class="col-lg-3 col-md-4 col-sm-6 pb-1">
    <div class="product-item bg-light mb-4">
        <div class="product-img position-relative overflow-hidden">
            <img class="img-fluid w-100" src="@Url.Content(imageUrl)" alt="@Model.Name">
            <div class="product-action">

                <a class="btn btn-outline-dark btn-square" asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">
                    <i class="fa fa-search"></i>
                </a>

                <a class="btn btn-outline-dark btn-square" asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id">
                    <i class="fa fa-shopping-cart"></i>
                </a>

                <a class="btn btn-outline-dark btn-square" href="#">
                    <i class="far fa-heart"></i>
                </a>
            </div>
        </div>
        <div class="text-center py-4">
            <a class="h6 text-decoration-none text-truncate" asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">
                @Model.Name
            </a>
            <div class="d-flex align-items-center justify-content-center mt-2">
                <h5>@Model.Price.ToString("N0")đ</h5>

                @if (Model.OriginalPrice.HasValue && Model.OriginalPrice > Model.Price)
                {
                    <h6 class="text-muted ml-2"><del>@Model.OriginalPrice.Value.ToString("N0")đ</del></h6>
                }
            </div>

        </div>
    </div>
</div>