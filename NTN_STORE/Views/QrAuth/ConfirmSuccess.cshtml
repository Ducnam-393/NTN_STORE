@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập thành công</title>
    <link href="~/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/Admin/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary vh-100 d-flex justify-content-center align-items-center">
    <div class="card text-center p-5 shadow-lg border-0 rounded-lg" style="max-width: 90%;">
        <div class="mb-4">
            <div class="icon-circle bg-success text-white mx-auto" style="width: 80px; height: 80px; font-size: 40px; display:flex; align-items:center; justify-content:center; border-radius:50%">
                <i class="fas fa-check"></i>
            </div>
        </div>
        <h3 class="text-gray-900 mb-2 font-weight-bold">Đã xác nhận!</h3>
        <p class="text-gray-600 mb-0">Máy tính của bạn sẽ tự động đăng nhập ngay bây giờ.</p>
        <button onclick="window.close()" class="btn btn-primary mt-4 rounded-pill px-4">Đóng cửa sổ</button>
    </div>
</body>
</html>