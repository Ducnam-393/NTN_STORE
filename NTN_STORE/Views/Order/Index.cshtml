@model IEnumerable<NTN_STORE.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
    Layout = "_Layout";
    string currentStatus = ViewBag.CurrentStatus as string;
}

<style>
    .nav-tabs .nav-link {
        color: #555;
        font-weight: 600;
        border: none;
        border-bottom: 2px solid transparent;
    }

        .nav-tabs .nav-link.active {
            color: #f58220;
            border-bottom: 2px solid #f58220;
            background: none;
        }

        .nav-tabs .nav-link:hover {
            color: #f58220;
        }

    .order-card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-bottom: 20px;
        border: 1px solid #eee;
    }

    .order-header {
        padding: 15px;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        background: #fbfbfb;
    }

    .order-footer {
        padding: 15px;
        border-top: 1px solid #f0f0f0;
        text-align: right;
        background: #fbfbfb;
    }

    .status-text {
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .btn-view-detail {
        background-color: #007bff !important; /* xanh dương */
        color: white !important;
        border: none !important;
    }
</style>

<div class="container py-5">
    <h3 class="fw-bold mb-4 text-uppercase">Lịch sử đơn hàng</h3>

    <ul class="nav nav-tabs mb-4 bg-white rounded shadow-sm">
        <li class="nav-item"><a class="nav-link @(currentStatus == "All" ? "active" : "")" href="/Order?status=All">Tất cả</a></li>
        <li class="nav-item"><a class="nav-link @(currentStatus == "Pending" ? "active" : "")" href="/Order?status=Pending">Chờ thanh toán</a></li>
        <li class="nav-item"><a class="nav-link @(currentStatus == "Shipping" ? "active" : "")" href="/Order?status=Shipping">Đang vận chuyển</a></li>
        <li class="nav-item"><a class="nav-link @(currentStatus == "Completed" ? "active" : "")" href="/Order?status=Completed">Hoàn thành</a></li>
        <li class="nav-item"><a class="nav-link @(currentStatus == "Cancelled" ? "active" : "")" href="/Order?status=Cancelled">Đã hủy</a></li>
    </ul>

    @if (Model != null && Model.Any())
    {
        foreach (var order in Model)
        {
            <div class="order-card">
                <div class="order-header">
                    <div>
                        <span class="fw-bold">#@order.OrderCode</span>
                        <span class="mx-2 text-muted">|</span>
                        <span class="text-muted small">@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div>
                        @if (order.Status == "Pending")
                        {
                            <span class="status-text text-warning">Chờ xác nhận</span>
                        }
                        else if (order.Status == "Shipping")
                        {

                            <span class="status-text text-primary">Đang vận chuyển</span>
                        }
                        else if (order.Status == "Completed")
                        {

                            <span class="status-text text-success">Giao hàng thành công</span>
                        }
                        else if (order.Status == "Cancelled")
                        {

                            <span class="status-text text-danger">Đã hủy</span>
                        }
                    </div>
                </div>

                <div class="p-3">
                    @foreach (var item in order.OrderDetails)
                    {
                        <div class="d-flex mb-3 border-bottom pb-3 last-no-border">
                            <img src="@(item.Product.Images?.FirstOrDefault()?.ImageUrl ?? "/img/no-image.jpg")" style="width: 80px; height: 80px; object-fit: cover; border: 1px solid #eee; border-radius: 5px;">
                            <div class="ms-3 flex-grow-1">
                                <h6 class="mb-1 fw-bold">@item.Product.Name</h6>
                                <div class="text-muted small mb-1">Phân loại: @(item.Variant?.Color ?? "-"), Size @(item.Variant?.Size ?? "-")</div>
                                <div>x @item.Quantity</div>
                            </div>
                            <div class="text-end">
                                <span class="text-danger fw-bold">@item.Price.ToString("N0")₫</span>
                            </div>
                        </div>
                    }
                </div>

                <div class="order-footer d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted">Thành tiền:</span>
                        <span class="fs-4 fw-bold text-danger">@order.TotalAmount.ToString("N0")₫</span>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-view-detail me-2">Xem chi tiết</a>
                        @if (order.Status == "Completed" || order.Status == "Cancelled")
                        {
                            <a asp-action="BuyAgain" asp-route-id="@order.Id" class="btn btn-warning text-white fw-bold">Mua Lại</a>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="100" class="mb-3 opacity-50">
            <p class="text-muted">Chưa có đơn hàng nào trong mục này.</p>
            <a href="/Product" class="btn btn-primary">Dạo cửa hàng ngay</a>
        </div>
    }
</div>