@model NTN_STORE.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_Layout";

    // Logic xác định trạng thái active của Timeline
    int step = 0;
    if (Model.Status == "Pending" || Model.Status == "Unpaid") { step = 1; }
    else if (Model.Status == "Processing") { step = 2; } // Nếu bạn có trạng thái này
    else if (Model.Status == "Shipping") { step = 3; }
    else if (Model.Status == "Completed") { step = 4; }
    else if (Model.Status == "Cancelled") { step = -1; }
}

<style>
    /* TIMELINE STYLES */
    .stepper-wrapper {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        margin-bottom: 40px;
        position: relative;
    }

    .stepper-item {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        z-index: 2;
    }

        .stepper-item::before {
            position: absolute;
            content: "";
            border-bottom: 4px solid #ddd;
            width: 100%;
            top: 25px;
            left: -50%;
            z-index: 1;
        }

        .stepper-item:first-child::before {
            content: none;
        }

        .stepper-item.active::before {
            border-bottom: 4px solid #28a745;
        }

    .step-counter {
        position: relative;
        z-index: 3;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: #ddd;
        color: #fff;
        margin-bottom: 10px;
        font-size: 1.2rem;
    }

    .stepper-item.active .step-counter {
        background-color: #28a745;
    }

    .step-name {
        font-size: 0.9rem;
        color: #888;
        font-weight: 600;
        text-align: center;
    }

    .stepper-item.active .step-name {
        color: #28a745;
    }

    /* CANCEL STYLE */
    .stepper-item.cancelled .step-counter {
        background-color: #dc3545;
    }

    .stepper-item.cancelled .step-name {
        color: #dc3545;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="/Order" class="text-decoration-none text-muted"><i class="fas fa-arrow-left me-2"></i>Trở lại</a>
        <span class="text-muted">MÃ ĐƠN HÀNG: #@Model.OrderCode</span>
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body p-4">
            @if (step != -1)
            {
                <div class="stepper-wrapper">
                    <div class="stepper-item active">
                        <div class="step-counter"><i class="fas fa-file-invoice"></i></div>
                        <div class="step-name">Đơn hàng đã đặt<br><small>@Model.CreatedAt.ToString("HH:mm dd/MM")</small></div>
                    </div>
                    <div class="stepper-item @(step >= 2 ? "active" : "")">
                        <div class="step-counter"><i class="fas fa-box-open"></i></div>
                        <div class="step-name">Đã xác nhận<br><small>Shop đang đóng gói</small></div>
                    </div>
                    <div class="stepper-item @(step >= 3 ? "active" : "")">
                        <div class="step-counter"><i class="fas fa-shipping-fast"></i></div>
                        <div class="step-name">Đang vận chuyển<br><small>Giao cho ĐVVC</small></div>
                    </div>
                    <div class="stepper-item @(step >= 4 ? "active" : "")">
                        <div class="step-counter"><i class="fas fa-star"></i></div>
                        <div class="step-name">Đã giao hàng<br><small>Thành công</small></div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger text-center m-0">
                    <i class="fas fa-times-circle fa-2x mb-2"></i><br>
                    <strong>Đơn hàng đã bị hủy</strong><br>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <span>Lý do: @Model.Notes</span>
                    }
                </div>
            }
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body bg-light rounded">
                    <h5 class="fw-bold mb-3 text-primary"><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ nhận hàng</h5>
                    <div class="ps-4">
                        <p class="fw-bold mb-1">@Model.CustomerName <span class="fw-normal text-muted">| @Model.PhoneNumber</span></p>
                        <p class="text-muted mb-0">@Model.Address</p>
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <p class="text-warning small mt-1 fst-italic">Ghi chú: @Model.Notes</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Sản phẩm</th>
                                <th class="text-center">Đơn giá</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="@(item.Product.Images?.FirstOrDefault()?.ImageUrl ?? "/img/no-image.jpg")" width="60" class="rounded border me-3">
                                            <div>
                                                <div class="fw-bold">@item.Product.Name</div>
                                                <small class="text-muted">@item.Variant?.Color / @item.Variant?.Size</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center align-middle">@item.Price.ToString("N0")₫</td>
                                    <td class="text-center align-middle">@item.Quantity</td>
                                    <td class="text-end align-middle pe-4 fw-bold">@((item.Price * item.Quantity).ToString("N0"))đ</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white p-4">
                    <div class="row justify-content-end">
                        <div class="col-md-5 border-start ps-4">
                            <div class="d-flex justify-content-between mb-2"><span>Tổng tiền hàng</span><span>@Model.OrderDetails.Sum(x => x.Price * x.Quantity).ToString("N0")₫</span></div>
                            <div class="d-flex justify-content-between mb-2"><span>Phí vận chuyển</span><span>30,000₫</span></div> @if(Model.DiscountValue > 0) {
                            <div class="d-flex justify-content-between mb-2 text-success"><span>Voucher giảm giá</span><span>-@Model.DiscountValue.ToString("N0")₫</span></div>
                                                        }
                            <hr>
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <span class="fw-bold fs-5">Tổng thanh toán</span>
                                <span class="fw-bold fs-4 text-danger">@Model.TotalAmount.ToString("N0")₫</span>
                            </div>

                            @if (Model.Status == "Pending" || Model.Status == "Unpaid")
                            {
                                <button type="button" class="btn btn-outline-danger w-100 fw-bold" data-bs-toggle="modal" data-bs-target="#cancelModal">HỦY ĐƠN HÀNG</button>
                            }

                            @if (Model.Status == "Completed" || Model.Status == "Cancelled")
                            {
                                <a asp-action="BuyAgain" asp-route-id="@Model.Id" class="btn btn-warning text-white w-100 fw-bold">MUA LẠI</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CancelOrder" method="post">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold">Xác nhận hủy đơn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <p>Bạn có chắc chắn muốn hủy đơn hàng này không?</p>
                    <div class="form-group">
                        <label class="form-label">Lý do hủy:</label>
                        <select name="reason" class="form-select">
                            <option>Muốn đổi địa chỉ giao hàng</option>
                            <option>Muốn thay đổi sản phẩm (Size, Màu)</option>
                            <option>Thủ tục thanh toán rắc rối</option>
                            <option>Tìm thấy giá rẻ hơn ở nơi khác</option>
                            <option>Đổi ý, không muốn mua nữa</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                    <button type="submit" class="btn btn-danger">Đồng ý Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>